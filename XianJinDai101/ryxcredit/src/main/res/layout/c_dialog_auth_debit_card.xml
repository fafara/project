<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_grey"
        android:orientation="horizontal"
        >
    <TextView
        android:id="@+id/c_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26px"
        android:layout_marginBottom="26px"
        android:layout_centerHorizontal="true"
        android:text="@string/open_withhold_service"/>
        <ImageView
            android:id="@+id/c_close"
            android:layout_width="46px"
            android:layout_height="46px"
            android:layout_marginRight="40px"
            android:background="@drawable/btn_close"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </com.zhy.autolayout.AutoRelativeLayout>
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/c_banklogo"
            android:layout_width="46px"
            android:layout_height="46px"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/c_dfBankNo"
            android:layout_toRightOf="@+id/c_banklogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_marginTop="40px"
            android:layout_marginBottom="40px"
            android:textAlignment="center" />
    </com.zhy.autolayout.AutoRelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:text="@string/bank_phone_nummber"/>
    <EditText
        android:id="@+id/c_bankPhoneNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入银行预留手机号"
        android:inputType="phone"
        android:layout_marginTop="20px"
        android:padding="30px"
        android:textSize="@dimen/bodytextsize"
        android:background="@drawable/c_edittext_bg"
        android:textColorHint="@color/fourblack"/>
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/lay_contract"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay_id"
        android:layout_marginTop="20px"
        >
        <com.rey.material.widget.CheckBox
            android:id="@+id/cb_agree"
            style="@style/LightCheckBox"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/c_authcontract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/cb_agree"
            android:textSize="@dimen/bodytextsize"
            android:text="@string/commissioned_agreement"
            android:textColor="@color/xd_colorPrimary"/>
    </com.zhy.autolayout.AutoRelativeLayout>
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:layout_marginTop="40px">

        <com.rey.material.widget.Button
            android:id="@+id/c_sure_btn"
            style="@style/CLightRaiseColorButtonRippleStyle"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_gravity="center_horizontal"
            android:text="@string/sure"
            android:textSize="@dimen/btntext" />
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>
