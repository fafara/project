<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="110px"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="200px"
            android:layout_height="200px"
            android:src="@drawable/contact_records_safety"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90px"
        android:layout_marginRight="90px"
        android:layout_marginTop="150px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号码："
            android:textSize="17sp" />

        <EditText
            android:id="@+id/edt_accout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:background="@null"
            android:cursorVisible="true"
            android:ems="10"
            android:editable="false"
            android:focusable="false"
            android:hint="请输入手机号码"
            android:inputType="phone"
            android:maxLength="11"
            android:text=""
            android:textColorHint="#cccccc"
            android:textCursorDrawable="@null"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/btn_pop_list"
            android:layout_width="80px"
            android:layout_height="80px"
            android:visibility="gone" />
    </com.zhy.autolayout.AutoLinearLayout>

    <LinearLayout
        android:id="@+id/layout_username"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="90px"
        android:layout_marginRight="90px"
        android:layout_marginTop="20px"
        android:background="@color/xd_colorPrimaryDark"
        android:orientation="horizontal" />

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/middle"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="90px"
        android:layout_marginRight="90px"
        android:layout_marginTop="80px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务密码："
            android:textSize="17sp" />

        <EditText
            android:id="@+id/edt_pwd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:background="@null"
            android:cursorVisible="true"
            android:hint="请输入服务密码"
            android:text=""
            android:inputType="numberPassword"
            android:textColorHint="#cccccc"
            android:textCursorDrawable="@null"
            android:maxLength="16"
            android:singleLine="true"
            android:textSize="16sp" />
    </com.zhy.autolayout.AutoLinearLayout>

    <LinearLayout
        android:id="@+id/layout_pwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/onepx"
        android:layout_marginLeft="90px"
        android:layout_marginRight="90px"
        android:layout_marginTop="20px"
        android:background="@color/xd_colorPrimaryDark"
        android:orientation="horizontal" />
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/middle"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="90px"
        android:layout_marginRight="90px"
        android:layout_marginTop="40px"
        android:orientation="horizontal">
        <CheckBox
            android:checked="true"
            android:focusable="false"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_resetPwd"
        style="@style/LightFlatWaveColorButtonRippleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="@string/c_authorization_RuiFuXiaoDai_info"
        android:textColor="@color/xd_colorPrimary"
        android:textSize="14sp" />
        </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90px"
        android:layout_marginRight="90px"
        android:layout_marginTop="60px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.rey.material.widget.Button
                android:id="@+id/btn_login"
                style="@style/LightRaiseColorButtonRippleStyle"
                android:layout_width="match_parent"
                android:gravity="center"
                android:text="提  交"
                android:textSize="@dimen/contenttitletext" />
        </LinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60px"
        android:layout_marginLeft="90px"
        android:layout_marginRight="90px"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30px"
            android:layout_height="30px"
            android:src="@drawable/info_dot"
            />

        <TextView
            android:layout_marginLeft="20px"
            android:id="@+id/tv_contactinfo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/xd_colorPrimary"
            android:textSize="14sp" />

    </com.zhy.autolayout.AutoLinearLayout>
