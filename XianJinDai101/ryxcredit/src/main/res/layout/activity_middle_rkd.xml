<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/grey_bg"
    android:orientation="vertical">

    <include
        android:id="@+id/c_credit_home_header"
        layout="@layout/c_widget_title"/>
    <!--如何激活瑞易贷-->
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rl_instruction_how_activate"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:background="@drawable/selector_user_action_bg"
        android:clickable="true"
        >
        <TextView
            style="@style/textViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40px"
            android:text="@string/tv_middle_rkd_how_activate"/>

        <ImageView
            android:layout_width="25px"
            android:layout_height="54px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="46px"
            android:scaleType="centerInside"
            android:src="@drawable/icon_user_jiantou"/>
    </com.zhy.autolayout.AutoRelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e0e0e0"
        />

    <!--如何进行瑞易贷借款-->
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rl_instruction_how_borrow"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:background="@drawable/selector_user_action_bg"
        android:clickable="true"
        >
        <TextView
            style="@style/textViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40px"
            android:text="@string/tv_middle_rkd_how_borrow"/>

        <ImageView
            android:layout_width="25px"
            android:layout_height="54px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="46px"
            android:scaleType="centerInside"
            android:src="@drawable/icon_user_jiantou"/>
    </com.zhy.autolayout.AutoRelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e0e0e0"
        />

    <!--如何进行瑞易贷还款-->
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rl_instruction_how_repayment"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:background="@drawable/selector_user_action_bg"
        android:clickable="true"
        >
        <TextView
            style="@style/textViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40px"
            android:text="@string/tv_middle_rkd_how_repayment"/>

        <ImageView
            android:layout_width="25px"
            android:layout_height="54px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="46px"
            android:scaleType="centerInside"
            android:src="@drawable/icon_user_jiantou"/>
    </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
