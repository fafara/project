<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/activity_bg"
    android:orientation="vertical">
    <include
        android:id="@+id/lay_title"
        layout="@layout/ryxpaytitle"
        android:layout_width="match_parent"
        android:layout_height="56dp" />
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="60px"
        app:cardCornerRadius="5dp"
        >
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:gravity="center"
            android:textColor="@color/black"
            android:background="@color/white"
            android:textSize="@dimen/bodylittletextsize"/>
        <TextView
            android:id="@+id/tv_pledge_amount"
            android:layout_width="match_parent"
            android:layout_height="300px"
            android:background="#f5f5f5"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="36sp"/>

            <TextView
                android:id="@+id/tv_activitydesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="60px"
                android:paddingTop="60px"
                android:paddingRight="60px"
                android:ellipsize="marquee"
                android:textColor="@color/threeblack"
                android:textSize="@dimen/bodylittletextsize"/>
            <TextView
                android:id="@+id/tv_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:ellipsize="marquee"
                android:paddingLeft="60px"
                android:paddingRight="60px"
                android:textSize="@dimen/bodylittletextsize"
                android:paddingBottom="110px"/>
        </com.zhy.autolayout.AutoLinearLayout>
    </android.support.v7.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="60px"
        android:layout_marginLeft="60px"
        android:layout_marginRight="60px"
        android:layout_height="wrap_content">
        <com.rey.material.widget.Button
            android:id="@+id/placetheorder_btn"
            style="@style/LightRaiseColorButtonRippleStyle"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textSize="@dimen/contenttitletext"
            android:text="确认支付"/>

    </LinearLayout>


</com.zhy.autolayout.AutoLinearLayout>