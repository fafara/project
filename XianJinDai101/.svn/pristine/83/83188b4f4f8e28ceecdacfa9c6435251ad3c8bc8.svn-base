<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/title"
        layout="@layout/c_widget_title"></include>
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/c_ryx_credit_header_title"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/xd_blue"
        android:fitsSystemWindows="true"
        android:gravity="center_vertical">
    <ImageView
        android:id="@+id/credit_tileleftImg"
        android:layout_width="110px"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center_vertical"
        android:src="@drawable/c_titleback_bg"
        />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="#fff"
        android:textSize="19sp"/>
    <ImageView
        android:id="@+id/tilerightImg"
        android:layout_width="60px"
        android:layout_height="60px"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:focusable="false"
        android:background="@drawable/c_more"
        android:visibility="invisible"
        />
    </com.zhy.autolayout.AutoRelativeLayout>
    <com.ryx.ryxcredit.newactivity.LeadingDotsSuccessViews
        android:id="@+id/ldv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/c_ryx_credit_header_title">
    </com.ryx.ryxcredit.newactivity.LeadingDotsSuccessViews>

    <include
        android:id="@+id/footer"
        layout="@layout/c_view_common_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_above="@id/footer"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ldv_content"
        android:orientation="vertical">
        <FrameLayout
            android:id="@+id/c_fl_base_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </FrameLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>
