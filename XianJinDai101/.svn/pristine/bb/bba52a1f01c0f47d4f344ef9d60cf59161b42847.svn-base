<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                     android:layout_width="match_parent"
                                     android:layout_height="match_parent"
                                     android:orientation="vertical">
	<com.zhy.autolayout.AutoRelativeLayout
		android:layout_width="match_parent"
		android:layout_height="56dp"
		android:background="@color/blue"
		android:fitsSystemWindows="true"
		android:gravity="center_vertical">
		<ImageView
			android:id="@+id/tileleftImg"
			android:layout_width="110px"
			android:layout_height="match_parent"
			android:layout_alignParentLeft="true"
			android:layout_gravity="center_vertical"
			android:focusable="false"
			android:src="@drawable/ryxtitlebackbg"
		/>
		<TextView
			android:id="@+id/tv_title"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_centerInParent="true"
			android:gravity="center"
			android:text="绑定银行卡"
			android:textColor="#fff"
			android:textSize="@dimen/maxtextsize"/>
		<ImageView
			android:id="@+id/tilerightImg"
			android:layout_width="109px"
			android:layout_height="109px"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_marginRight="28px"
			android:visibility="invisible"
		/>
	</com.zhy.autolayout.AutoRelativeLayout>
	<com.zhy.autolayout.AutoRelativeLayout
		android:id="@+id/lay_instruction"
		android:layout_width="match_parent"
		android:layout_height="90px"
		android:background="@color/grey_bg"
	>
		<ImageView
			android:id="@+id/close_instruction"
			android:layout_width="48px"
			android:layout_marginLeft="70px"
			android:layout_height="48px"
			android:layout_centerVertical="true"
			android:src="@drawable/btn_close"/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:text="@string/bind_delete_card_instruction"
			android:textColor="@color/threeblack"
			android:textSize="@dimen/bodylittletextsize"/>
	</com.zhy.autolayout.AutoRelativeLayout>
	<com.zhy.autolayout.AutoLinearLayout
		android:id="@+id/lay_addcard"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center|top"
	>
		<ImageView
			android:id="@+id/img_no_item"
			android:layout_width="307px"
			android:layout_height="341px"
			android:layout_marginTop="148px"
			android:src="@drawable/bind_card_no_itme"
			android:visibility="gone"/>
	</com.zhy.autolayout.AutoLinearLayout>

	<com.baoyz.swipemenulistview.SwipeMenuListView
		android:id="@+id/lv_debitcard"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_below="@+id/line8"
		android:layout_marginLeft="70px"
		android:layout_marginRight="25px"
		android:layout_marginTop="45px"
		android:divider="@null"
		android:dividerHeight="32px"/>
</com.zhy.autolayout.AutoLinearLayout>
