<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/white"
	android:orientation="vertical">
	<include layout="@layout/ryxpaytitle"></include>
	<com.zhy.autolayout.AutoRelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="70px"
		android:layout_marginRight="70px"
		android:layout_marginTop="100px"
	>
		<EditText
			android:id="@+id/flow_phonenumberet"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:layout_weight="4"
			android:background="@null"
			android:cursorVisible="true"
			android:focusable="true"
			android:focusableInTouchMode="true"
			android:paddingBottom="20px"
			android:hint="请输入手机号"
			android:inputType="number"
			android:maxLength="11"
			android:paddingLeft="20px"
			android:textColor="@color/secondblack"
			android:textColorHint="#cccccc"
			android:textCursorDrawable="@null"
			android:textSize="16sp"
		/>
		<ImageView
			android:id="@+id/flow_contactImg"
			android:layout_width="80px"
			android:layout_height="80px"
			android:layout_alignParentRight="true"
			android:layout_marginBottom="20px"
			android:layout_marginRight="20px"
			android:src="@drawable/icon_recharge_contact"/>
	</com.zhy.autolayout.AutoRelativeLayout>
	<View
		android:layout_width="wrap_content"
		android:layout_height="@dimen/onepx"
		android:layout_marginLeft="70px"
		android:layout_marginRight="70px"
		android:background="@color/grid_line"/>
	<com.zhy.autolayout.AutoLinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="70px"
		android:layout_marginRight="70px">
		<com.ryx.payment.ruishua.widget.RyxGridView
			android:id="@+id/flow_ryxgridview"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="60px"
			android:horizontalSpacing="-2dip"
			android:listSelector="@null"
			android:numColumns="3"
			android:scrollbars="none"
			android:stretchMode="columnWidth"
			android:verticalSpacing="30dip"
		>

		</com.ryx.payment.ruishua.widget.RyxGridView>

	</com.zhy.autolayout.AutoLinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="70px"
		android:layout_marginRight="70px"
		android:layout_marginTop="60px">
		<com.rey.material.widget.Button
			android:id="@+id/flow_nextbtn"
			style="@style/LightRaiseColorButtonRippleStyle"
			android:layout_width="match_parent"
			android:gravity="center"
			android:text="充值"
			android:textSize="@dimen/contenttitletext"/>
	</LinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
