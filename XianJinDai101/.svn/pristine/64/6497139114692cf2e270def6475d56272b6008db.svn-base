<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_bg"
        android:orientation="vertical"
        tools:context="com.ryx.ryxcredit.activity.CenterBankCreditActivity">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="20px"
            android:background="@color/grey_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_login_report"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"/>
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/xjd_ll_sitchooseone_taobao_account"
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:background="@drawable/selector_user_action_bg"
            android:clickable="true" >
            <TextView
                android:id="@+id/xjd_tv_sitchooseone_taobao_account"
                style="@style/textViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="40px"
                android:text="@string/c_sixchooseone_taobaophonenum_login"
                android:textSize="12sp"/>
            <EditText
                android:id="@+id/xjd_et_sitchooseone_taobao_account"
                android:layout_width="0dp"
                android:layout_height="150px"
                android:layout_weight="1"
                android:layout_marginLeft="150px"
                android:drawablePadding="8dp"
                android:hint="@string/c_sixchooseone_taobaophonenum_login_hint"
                android:textColorHint="#cccccc"
                android:textCursorDrawable="@null"
                android:background="@null"
                android:textSize="12sp" />
        </com.zhy.autolayout.AutoLinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e0e0e0"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/xjd_ll_sitchooseone_taobao_verification_code"
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:background="@drawable/selector_user_action_bg"
            android:clickable="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/xjd_tv_sitchooseone_taobao_verification_code"
                style="@style/textViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="40px"
                android:text="@string/c_sixchooseone_taobaverificationcode_login"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/xjd_et_sitchooseone_taobao_verification_code"
                android:layout_width="0dp"
                android:layout_height="150px"
                android:layout_marginLeft="150px"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/c_sixchooseone_taobaverificationcode_login_hint"
                android:inputType="textPassword"
                android:textColorHint="#cccccc"
                android:textCursorDrawable="@null"
                android:background="@null"
                android:textSize="12sp" />
            <com.rey.material.widget.TextView
                android:id="@+id/xjd_tv_get_verification_code"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginRight="10px"
                android:text="@string/c_taobao_get_verification_code"
                android:textColor="@color/xd_colorPrimaryDark"
                android:background="#ffffff"/>
        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e0e0e0" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/xjd_rl_sitchooseone_taobao_agreement"
            android:layout_width="wrap_content"
            android:layout_height="100px"
            android:layout_marginTop="40px"
            android:layout_marginLeft="40px">
                <CheckBox
                    android:id="@+id/xjd_cb_sitchooseone_taobao_agreement"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="40px"
                    android:layout_marginLeft="40px"
                    android:checked="true"
                    android:textColor="#000000"
                    android:text="阅读并同意"/>

            <TextView
                android:id="@+id/xjd_tv_sitchooseone_taobao_agreement"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="40px"
                android:textColor="#1db7f0"
                android:clickable="true"
                android:layout_toRightOf="@+id/xjd_cb_sitchooseone_taobao_agreement"
                android:text="《授权信息使用协议》"/>
        </com.zhy.autolayout.AutoRelativeLayout>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100px">
            <com.rey.material.widget.Button
                android:id="@+id/xjd_bt_sitchooseone_taobao_next"
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:background="@color/xd_colorPrimaryDark"
                android:textColor="#ffffff"
                android:gravity="center"
                android:text="下一步"/>
        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>
</LinearLayout>
