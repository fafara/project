
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/rlframe"
            android:layout_width="fill_parent"
            android:layout_height="match_parent" 
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="fill_parent"
                android:layout_height="54dip"
                >

                <Button
                    android:id="@+id/btn_digital1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="1" android:layout_weight="1" android:textColor="@color/BLACK" android:textSize="18sp" android:background="@drawable/keybtnbg"/>

                <Button
                    android:id="@+id/btn_digital2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" android:textColor="@color/BLACK" android:textSize="18sp" android:text='2' android:background="@drawable/keybtnbg" />

                <Button
                    android:id="@+id/btn_digital3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="3" android:layout_weight="1" android:textColor="@color/BLACK" android:textSize="18sp" android:background="@drawable/keybtnbg" />

                <Button
                    android:id="@+id/btn_digital4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="4"
                    android:textColor="@color/BLACK"
                    android:textSize="18sp"
                     android:background="@drawable/keybtnbg"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:weightSum="4"
                android:layout_height="54dip">

                <Button
                    android:id="@+id/btn_digital5"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:text="5" 
                    android:layout_weight="1" 
                    android:textColor="@color/BLACK" 
                    android:textSize="18sp" 
                    android:background="@drawable/keybtnbg" />

                <Button
                    android:id="@+id/btn_digital6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="6" 
                    android:layout_weight="1"
                     android:textColor="@color/BLACK" 
                     android:textSize="18sp" 
                     android:background="@drawable/keybtnbg" />

                <Button
                    android:id="@+id/btn_digital7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="7" 
                    android:layout_weight="1" 
                    android:textColor="@color/BLACK" 
                    android:textSize="18sp"  
                    android:background="@drawable/keybtnbg"/>

                <Button
                    android:id="@+id/btn_digital8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="8"
                    android:textColor="@color/BLACK"
                    android:textSize="18sp"
                    android:background="@drawable/keybtnbg"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="53dip"
                android:weightSum="4"
                >

                <Button
                    android:id="@+id/btn_digital9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/keybtnbg"
                    android:text="9"
                    android:textColor="@color/BLACK"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btn_digital10"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="0" 
                    android:textSize="18sp"
                    android:background="@drawable/keybtnbg"  
                    android:layout_weight="1" 
                    android:textColor="@color/BLACK"/>

                  <ImageButton 
				    android:id="@+id/btn_clear"
				    android:layout_width="0dp"
                    android:layout_height="match_parent"
                      android:layout_weight="2"
                      android:background="@drawable/keybtnbg"
                      android:src="@drawable/delbtnbg"
				    />
                
            </LinearLayout>

        </LinearLayout>
