<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/white"
	android:orientation="vertical">
	<include layout="@layout/ryxpaytitle"/>
	<com.zhy.autolayout.AutoRelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="70px"
		android:layout_marginRight="70px"
	>
		<EditText
			android:id="@+id/card_add_cardnumber"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_marginTop="152px"
			android:background="@null"
			android:cursorVisible="true"
			android:focusable="true"
			android:focusableInTouchMode="true"
			android:hint="@string/please_enter_a_credit_card_number_or_credit_card_to_get"
			android:inputType="number"
			android:maxLength="24"
			android:text=""
			android:textColor="@android:color/black"
			android:textColorHint="@color/fourblack"
			android:textCursorDrawable="@null"
			android:textSize="@dimen/bodytextsize"
		/>
		<ImageView
			android:id="@+id/card_add_swiperimg"
			android:layout_width="104px"
			android:layout_height="80px"
			android:layout_alignParentRight="true"
			android:layout_marginTop="152px"
			android:scaleType="fitCenter"
			android:src="@drawable/img_swiping_card"
		/>
	</com.zhy.autolayout.AutoRelativeLayout>
	<View
		android:layout_width="match_parent"
		android:layout_height="@dimen/onepx"
		android:layout_marginLeft="70px"
		android:layout_marginTop="42px"
		android:background="@color/register_line_color"/>


	<com.zhy.autolayout.AutoLinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="70px"
		android:layout_marginRight="70px">
		<EditText
			android:id="@+id/card_add_cardname"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="52px"
			android:background="@null"
			android:cursorVisible="true"
			android:hint="@string/please_enter_the_cardholder_name"
			android:maxLength="20"
			android:textColor="@android:color/black"
			android:textColorHint="@color/fourblack"
			android:textCursorDrawable="@null"
			android:textSize="@dimen/bodytextsize"
		/>
	</com.zhy.autolayout.AutoLinearLayout>
	<View
		android:layout_width="match_parent"
		android:layout_height="@dimen/onepx"
		android:layout_marginLeft="70px"
		android:layout_marginTop="42px"
		android:background="@color/register_line_color"/>
	<com.zhy.autolayout.AutoRelativeLayout
		android:layout_width="match_parent"
		android:layout_height="120px"
		android:layout_marginLeft="70px"
		android:layout_marginRight="70px">
		<TextView
			android:id="@+id/hkrtext"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_alignParentLeft="true"
			android:layout_marginTop="52px"
			android:text="@string/epayment_date_set"
			android:textColor="@color/secondblack"/>
		<TextView
			android:id="@+id/card_add_huankuanmsg"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_marginLeft="50px"
			android:layout_marginTop="52px"
			android:layout_toRightOf="@id/hkrtext"
			android:textColor="@color/secondblack"/>
		<CheckBox
			android:id="@+id/card_add_togglebtn"
			android:layout_width="104px"
			android:layout_height="80px"
			android:layout_alignParentRight="true"
			android:layout_marginTop="52px"
			android:scaleType="fitCenter"
			android:background="@drawable/slideswitchbac"
			android:button="@null"/>
	</com.zhy.autolayout.AutoRelativeLayout>
	<View
		android:layout_width="match_parent"
		android:layout_height="@dimen/onepx"
		android:layout_marginLeft="70px"
		android:layout_marginTop="42px"
		android:background="@color/register_line_color"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="70px"
		android:layout_marginRight="70px"
		android:layout_marginTop="120px">
		<com.rey.material.widget.Button
			android:id="@+id/card_add_nextbtn"
			style="@style/LightRaiseColorButtonRippleStyle"
			android:layout_width="match_parent"
			android:gravity="center"
			android:text="下一步"
			android:textSize="@dimen/contenttitletext"/>

	</LinearLayout>

</com.zhy.autolayout.AutoLinearLayout>