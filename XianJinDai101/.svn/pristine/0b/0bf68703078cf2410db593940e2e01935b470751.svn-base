<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <include layout="@layout/c_widget_title"></include>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scoll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_bg"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/c_tv_product_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="54px"
                    android:layout_marginTop="54px"
                    android:gravity="center_horizontal"
                    android:textAlignment="center"
                    android:textSize="@dimen/bodytextsize" />

                <View style="@style/BlackHorizontalLine" />

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="54px"
                    android:layout_marginLeft="90px"
                    android:layout_marginRight="90px"
                    android:layout_marginTop="54px"
                    android:background="@android:color/white"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/BorrowLeftTitleStyle"
                        android:text="@string/c_borrow_money_amount"
                        android:textSize="@dimen/bodytextsize" />

                    <EditText
                        android:id="@+id/c_borrow_money_amount_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60px"
                        android:background="@android:color/transparent"
                        android:hint="@string/credited_amount"
                        android:inputType="numberDecimal"
                        android:textColorHint="@color/fourblack"
                        android:textSize="@dimen/bodytextsize" />
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/grey_bg"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/c_tv_total_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="27px"
                        android:layout_marginTop="27px"
                        android:gravity="center_horizontal"
                        android:text="还款金额¥0.00"
                        android:textAlignment="center"
                        android:textColor="@color/red_second"
                        android:textSize="@dimen/bodylittletextsize" />
                </com.zhy.autolayout.AutoLinearLayout>

            </com.zhy.autolayout.AutoLinearLayout>


            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30px"
                    android:layout_marginTop="60px"
                    android:gravity="center_horizontal"
                    android:text="@string/c_borrow_money_deadline"
                    android:textAlignment="center"
                    android:textColor="@color/threeblack"
                    android:textSize="@dimen/bodylittletextsize" />

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/c_ll_loanterm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="60px"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <com.zhy.autolayout.AutoLinearLayout
                        android:id="@+id/c_lly_dead_line_7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/c_repayment_type_press"
                        android:gravity="center_horizontal|center_vertical"
                        android:orientation="vertical">

                        <com.rey.material.widget.TextView
                            android:id="@+id/c_tv_dead_line_7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="24px"
                            android:layout_marginLeft="111px"
                            android:layout_marginRight="111px"
                            android:layout_marginTop="24px"
                            android:text="7天"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/bodylittletextsize" />
                    </com.zhy.autolayout.AutoLinearLayout>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:id="@+id/c_lly_dead_line_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/c_repayment_type_bg"
                        android:gravity="center_horizontal|center_vertical"
                        android:orientation="vertical">

                        <com.rey.material.widget.TextView
                            android:id="@+id/c_tv_dead_line_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="24px"
                            android:layout_marginLeft="111px"
                            android:layout_marginRight="111px"
                            android:layout_marginTop="24px"
                            android:text="14天"
                            android:textSize="@dimen/bodylittletextsize" />
                    </com.zhy.autolayout.AutoLinearLayout>
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoLinearLayout>

            <View style="@style/BlackHorizontalLine" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical">

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90px"
                    android:layout_marginRight="90px"
                    android:layout_marginTop="60px"
                    android:background="@android:color/white">

                    <TextView
                        style="@style/BorrowLeftTitleStyle"
                        android:layout_marginBottom="30px"
                        android:text="@string/c_borrow_choose_bank_no"
                        android:textSize="@dimen/bodylittletextsize" />

                    <TextView
                        android:id="@+id/c_tv_dfbank_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="@string/df_bank_list"
                        android:textColor="@color/xd_blue"
                        android:textSize="@dimen/leasttextsize" />
                </com.zhy.autolayout.AutoRelativeLayout>

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="90px"
                    android:layout_marginRight="90px"
                    android:background="@drawable/whiteroundshape"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_bank"
                        android:layout_width="66px"
                        android:layout_height="66px"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="60px"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/c_tv_cardno1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="30px"
                        android:paddingBottom="42px"
                        android:paddingTop="42px"
                        android:layout_toRightOf="@+id/img_bank"
                        android:textAlignment="center"
                        android:textSize="@dimen/bodytextsize" />

                    <TextView
                        android:id="@+id/c_tv_bind"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="60px"
                        android:paddingBottom="42px"
                        android:paddingTop="42px"
                        android:background="@android:color/transparent"
                        android:text="@string/go_bing_card"
                        android:textColor="@color/xd_blue"
                        android:textSize="@dimen/bodytextsize"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/c_btn_shoukuanzhanghu_change"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="60px"
                        android:paddingBottom="42px"
                        android:paddingTop="42px"
                        android:background="@android:color/transparent"
                        android:gravity="right"
                        android:text="@string/c_borrow_change"
                        android:textColor="@color/xd_blue"
                        android:textSize="@dimen/bodytextsize"
                        android:visibility="gone" />
                </com.zhy.autolayout.AutoRelativeLayout>

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90px"
                    android:layout_marginRight="90px"
                    android:layout_marginTop="60px"
                    android:background="@android:color/white">

                    <TextView
                        style="@style/BorrowLeftTitleStyle"
                        android:layout_marginBottom="30px"
                        android:text="@string/c_return_choose_bank_no"
                        android:textSize="@dimen/bodylittletextsize" />

                    <TextView
                        android:id="@+id/c_tv_search_bank_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="@string/c_borrow_tip2"
                        android:textColor="@color/xd_blue"
                        android:textSize="@dimen/leasttextsize" />
                </com.zhy.autolayout.AutoRelativeLayout>

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="90px"
                    android:layout_marginRight="90px"
                    android:background="@drawable/whiteroundshape"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/c_chooseCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="请选择储蓄卡"
                        android:paddingBottom="42px"
                        android:paddingTop="42px"
                        android:textAlignment="center"
                        android:textColor="@color/xd_blue"
                        android:textSize="@dimen/bodylittletextsize" />

                    <ImageView
                        android:id="@+id/img_banklogo"
                        android:layout_width="66px"
                        android:layout_height="66px"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="60px"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/c_tv_cardno2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="30px"
                        android:paddingBottom="42px"
                        android:paddingTop="42px"
                        android:layout_toRightOf="@+id/img_banklogo"
                        android:text=""
                        android:textAlignment="center"
                        android:textSize="@dimen/bodytextsize"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/c_btn_huankuanzhanghu_change"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="60px"
                        android:background="@android:color/transparent"
                        android:gravity="right"
                        android:paddingBottom="42px"
                        android:paddingTop="42px"
                        android:onClick="huankuanzhanghuAction"
                        android:text="@string/c_borrow_change"
                        android:textColor="@color/xd_blue"
                        android:textSize="@dimen/bodytextsize"
                        android:visibility="gone" />
                </com.zhy.autolayout.AutoRelativeLayout>

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="60px"
                    android:layout_marginLeft="90px"
                    android:layout_marginRight="90px"
                    android:layout_marginTop="60px"
                    android:background="@android:color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@string/c_borrow_tip1"
                        android:textSize="@dimen/leasttextsize" />

                </com.zhy.autolayout.AutoRelativeLayout>


            </com.zhy.autolayout.AutoLinearLayout>

            <View style="@style/BlackHorizontalLine" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:orientation="vertical">

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="42px"
                    android:layout_marginLeft="90px"
                    android:layout_marginRight="90px"
                    android:layout_marginTop="42px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="还款金额"
                        android:textColor="@color/threeblack"
                        android:textSize="@dimen/bodylittletextsize" />

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/c_tv_total_amount1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="¥0.00"
                            android:textColor="@color/secondblack"
                            android:textSize="@dimen/bodylittletextsize" />

                        <ImageView
                            android:id="@+id/img_ask"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="30px"
                            android:src="@drawable/ask_img" />
                    </com.zhy.autolayout.AutoLinearLayout>
                </com.zhy.autolayout.AutoRelativeLayout>

                <View style="@style/BlackHorizontalLine" />

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="42px"
                    android:layout_marginLeft="90px"
                    android:layout_marginRight="90px"
                    android:layout_marginTop="42px"
                    android:background="@android:color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="还款日期"
                        android:textColor="@color/threeblack"
                        android:textSize="@dimen/bodylittletextsize" />

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/c_tv_repayment_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/secondblack"
                            android:textSize="@dimen/bodylittletextsize" />
                    </com.zhy.autolayout.AutoLinearLayout>
                </com.zhy.autolayout.AutoRelativeLayout>
            </com.zhy.autolayout.AutoLinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lay_id"
                android:layout_marginBottom="60px"
                android:layout_marginTop="95px">

                <com.rey.material.widget.Button
                    android:id="@+id/c_borrow_money_btn"
                    style="@style/CLightRaiseColorButtonRippleStyle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="90px"
                    android:layout_marginRight="90px"
                    android:text="@string/c_borrow_loan"
                    android:textSize="@dimen/bodytextsize" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/c_borrow_money_btn"
                    android:layout_marginTop="10px"
                    android:layout_marginLeft="90px"
                    android:textColor="@color/threeblack"
                    android:text="@string/borrow_repayment_tips"
                    android:textSize="@dimen/bodylittletextsize" />
            </RelativeLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </android.support.v4.widget.NestedScrollView>
</com.zhy.autolayout.AutoLinearLayout>