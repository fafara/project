<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/GridBG"
    android:orientation="vertical">
    <include layout="@layout/ryxpaytitle"></include>

    <!--金额-->
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/layout_money"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:layout_marginTop="30px"
        android:background="#ffffff"
        >
        <TextView
            android:id="@+id/tv_money_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="70px"
            android:text="金   额"
            android:textColor="@color/secondblack"
            android:textSize="@dimen/bodytextsize"/>

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="70px"
            android:textColor="@color/black"
            android:textSize="@dimen/bodytextsize"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/onepx"
            android:layout_alignParentBottom="true"
            android:background="@color/register_line_color"
            />
    </com.zhy.autolayout.AutoRelativeLayout>
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/layout_cardNo"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:background="#ffffff"
        >
        <TextView
            android:id="@+id/tv_cardNo_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="70px"
            android:text="订单号"
            android:textColor="@color/secondblack"
            android:textSize="@dimen/bodytextsize"/>

        <TextView
            android:id="@+id/tv_orderid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="70px"
            android:textColor="@color/black"
            android:textSize="@dimen/bodytextsize"/>

        <View
            android:id="@+id/line_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/onepx"
            android:layout_alignParentBottom="true"
            android:background="@color/register_line_color"
            />
    </com.zhy.autolayout.AutoRelativeLayout>


    <!--收款账号-->
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/layout_account"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:background="#ffffff"
        >
        <TextView
            android:id="@+id/tv_account_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="70px"
            android:text="收款号"
            android:textColor="@color/secondblack"
            android:textSize="@dimen/bodytextsize"/>

        <TextView
            android:id="@+id/tv_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="70px"
            android:textColor="@color/black"
            android:textSize="@dimen/bodytextsize"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/onepx"
            android:layout_alignParentBottom="true"
            android:background="@color/register_line_color"
            />
    </com.zhy.autolayout.AutoRelativeLayout>


    <!--收款账号-->
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/layout_fukuanAccount"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:background="#ffffff"
        android:layout_marginBottom="30px"
        >
        <TextView
            android:id="@+id/tv_fukuanAccount_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="70px"
            android:text="付款卡"
            android:textColor="@color/secondblack"
            android:textSize="@dimen/bodytextsize"/>

        <TextView
            android:id="@+id/tv_fukuanAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="70px"
            android:textColor="@color/black"
            android:textSize="@dimen/bodytextsize"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/onepx"
            android:layout_alignParentBottom="true"
            android:background="@color/register_line_color"
            />
    </com.zhy.autolayout.AutoRelativeLayout>



    <!-- 安全码-->
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/lay_cvn"
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:background="#ffffff"
        >
        <TextView
            android:id="@+id/tv_cvn_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="70px"
            android:text="安全码"
            android:textColor="@color/secondblack"
            android:textSize="@dimen/bodytextsize"/>
        <EditText
            android:id="@+id/edt_cvn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="70px"
            android:background="@null"
            android:gravity="right"
            android:cursorVisible="true"
            android:hint="@string/input_security_code"
            android:inputType="number"
            android:maxLength="5"
            android:textColor="@android:color/black"
            android:textColorHint="#cccccc"
            android:textSize="@dimen/bodytextsize"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/onepx"
            android:layout_alignParentBottom="true"
            android:background="@color/register_line_color"
            />
    </com.zhy.autolayout.AutoRelativeLayout>

    <!-- 手机号-->
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/lay_mobile"
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:background="#ffffff"
        >
        <TextView
            android:id="@+id/tv_mobile_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="70px"
            android:text="手机号"
            android:textColor="@color/secondblack"
            android:textSize="@dimen/bodytextsize"/>
        <EditText
            android:id="@+id/edt_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="70px"
            android:background="@null"
            android:cursorVisible="true"
            android:hint="请输入银行卡预留手机号"
            android:gravity="right"
            android:inputType="number"
            android:maxLength="11"
            android:textColor="@android:color/black"
            android:textColorHint="#cccccc"
            android:textSize="@dimen/bodytextsize"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/onepx"
            android:layout_alignParentBottom="true"
            android:background="@color/register_line_color"
            />
    </com.zhy.autolayout.AutoRelativeLayout>
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/lay_date"
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:background="#ffffff"
        >
        <TextView
            android:id="@+id/tv_validate_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="70px"
            android:text="有效期"
            android:textColor="@color/secondblack"
            android:textSize="@dimen/bodytextsize"/>
        <EditText
            android:id="@+id/edt_validate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="70px"
            android:gravity="right"
            android:background="@null"
            android:cursorVisible="true"
            android:hint="月/年"
            android:textColor="@android:color/black"
            android:textColorHint="@color/fourblack"
            android:inputType="phone"
            android:textSize="@dimen/bodytextsize"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/onepx"
            android:layout_alignParentBottom="true"
            android:background="@color/register_line_color"
            />
    </com.zhy.autolayout.AutoRelativeLayout>
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/smscode_layou"
        android:layout_height="160px"
        android:layout_width="match_parent"
        android:background="#ffffff"
        >
        <TextView
            android:id="@+id/code_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/bodytextsize"
            android:textColor="@color/secondblack"
            android:layout_marginLeft="70px"
            android:text="验证码:" />
        <EditText
            android:id="@+id/et_smscode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/contenttitletext"
            android:hint="请填写验证码"
            android:background="@null"
            android:inputType="number"
            android:gravity="center_vertical|right"
            android:maxLength="8"
           android:layout_alignParentRight="true"
            android:textColor="@color/secondblack"
            android:layout_weight="4"
            android:focusable="true"
            android:textColorHint="@color/fourblack"
            android:layout_marginRight="70px"
            android:focusableInTouchMode="true"
            />
        <TextView
            android:id="@+id/tv_prompt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/contenttitletext"
            android:text="获取验证码"
            android:textColor="@color/secondblack"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_marginRight="50px"
            android:visibility="gone"
            />

    </com.zhy.autolayout.AutoRelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90px"
        android:layout_marginRight="90px"
        android:layout_marginTop="95px">
        <com.rey.material.widget.Button
            android:id="@+id/btn_next"
            style="@style/LightRaiseColorButtonRippleStyle"
            android:layout_width="match_parent"
            android:text="确定"
            android:textSize="@dimen/contenttitletext"
            />
    </RelativeLayout>


</com.zhy.autolayout.AutoLinearLayout>
