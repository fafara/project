<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                       android:layout_width="match_parent"
                                       android:layout_height="match_parent"
                                       android:orientation="vertical">
	<com.zhy.autolayout.AutoRelativeLayout
		android:id="@+id/title"
		android:layout_width="match_parent"
		android:layout_height="@dimen/title_height"
		android:background="@color/title_bg"
		android:orientation="horizontal">
		<ImageView
			android:id="@+id/tileleftImg"
			android:layout_width="110px"
			android:layout_height="match_parent"
			android:layout_alignParentLeft="true"
			android:layout_gravity="center_vertical"
			android:focusable="false"
			android:src="@drawable/ryxtitlebackbg"
		/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:text="@string/auth_user"
			android:textColor="@android:color/white"
			android:textSize="@dimen/maxtextsize"/>
	</com.zhy.autolayout.AutoRelativeLayout>

	<com.zhy.autolayout.AutoRelativeLayout
		android:id="@+id/lay_name"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/title"
		android:layout_marginLeft="70px"
	>
		<EditText
			android:id="@+id/edt_userName"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="100px"
			android:background="@null"
			android:cursorVisible="true"
			android:hint="@string/please_enter_your_real_name"
			android:textColor="@android:color/black"
			android:textColorHint="@color/fourblack"
			android:textCursorDrawable="@null"
			android:singleLine="true"
			android:textSize="@dimen/bodytextsize"/>

		<View
			android:id="@+id/line_name"
			android:layout_width="match_parent"
			android:layout_height="@dimen/onepx"
			android:layout_below="@+id/edt_userName"
			android:layout_marginTop="35px"
			android:background="@color/register_line_color"/>
	</com.zhy.autolayout.AutoRelativeLayout>
	<com.zhy.autolayout.AutoRelativeLayout
		android:id="@+id/lay_id"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/lay_name"
		android:layout_marginLeft="70px"
	>
		<EditText
			android:id="@+id/edt_userCardNo"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="52px"
			android:background="@null"
			android:maxLength="18"
			android:digits="0123456789x"
			android:inputType="textVisiblePassword"
			android:cursorVisible="true"
			android:hint="@string/please_enter_id_number"
			android:textColor="@android:color/black"
			android:textColorHint="@color/fourblack"
			android:textSize="@dimen/bodytextsize"/>

		<View
			android:layout_width="match_parent"
			android:layout_height="@dimen/onepx"
			android:layout_below="@+id/edt_userCardNo"
			android:layout_marginTop="42px"
			android:background="@color/register_line_color"/>
	</com.zhy.autolayout.AutoRelativeLayout>
	<com.zhy.autolayout.AutoRelativeLayout
		android:id="@+id/lay_contract"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/lay_id"
		android:layout_marginLeft="70px"
	>
		<com.rey.material.widget.CheckBox
			android:id="@+id/cb_agree"
			style="@style/LightCheckBox"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="80px"/>
		<TextView
			android:id="@+id/tv1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="28px"
			android:layout_marginTop="80px"
			android:layout_toRightOf="@+id/cb_agree"
			android:text="@string/agree"/>
		<TextView
			android:id="@+id/tv_authcontract"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="80px"
			android:layout_toRightOf="@+id/tv1"
			android:text="@string/authenticate_contract"
			android:textColor="@color/colorPrimary"/>
	</com.zhy.autolayout.AutoRelativeLayout>
	<com.zhy.autolayout.AutoRelativeLayout
		android:id="@+id/lay_privacy"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/lay_contract"
		android:layout_marginLeft="70px"
		android:layout_marginTop="35px"
	>
		<TextView
			android:id="@+id/tv_privacy"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="《查看隐私权保护政策》"
			android:textColor="@color/colorPrimary"/>
	</com.zhy.autolayout.AutoRelativeLayout>


	<LinearLayout
		android:id="@+id/linearll"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/lay_privacy"
		android:layout_marginTop="@dimen/dimen_70_dip">
		<com.rey.material.widget.Button
			android:id="@+id/btn_next"
			style="@style/LightRaiseColorButtonRippleStyle"
			android:layout_width="match_parent"
			android:layout_gravity="center_horizontal"
			android:layout_marginLeft="@dimen/dimen_70_dip"
			android:layout_marginRight="@dimen/dimen_70_dip"
			android:text="@string/next"
			android:textSize="@dimen/contenttitletext"
		/>
	</LinearLayout>
	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/linearll"
		android:layout_marginLeft="70px"
		android:layout_marginRight="70px"
		android:layout_marginTop="26px"
		android:text="@string/authen_swear"
		android:textSize="@dimen/leasttextsize"/>

</com.zhy.autolayout.AutoRelativeLayout>
