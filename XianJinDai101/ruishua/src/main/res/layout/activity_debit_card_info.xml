<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/GridBG"
	android:orientation="vertical">

	<com.zhy.autolayout.AutoRelativeLayout
		android:id="@+id/title"
		android:layout_width="match_parent"
		android:layout_height="@dimen/title_height"
		android:background="@color/title_bg"
		android:orientation="horizontal">
		<ImageView
			android:id="@+id/btn_back"
			android:layout_width="110px"
			android:layout_height="match_parent"
			android:layout_alignParentLeft="true"
			android:layout_gravity="center_vertical"
			android:focusable="false"
			android:src="@drawable/ryxtitlebackbg"
		/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:text="填写银行卡信息"
			android:textColor="@android:color/white"
			android:textSize="@dimen/maxtextsize"/>
	</com.zhy.autolayout.AutoRelativeLayout>
	<!-- 姓名-->
	<com.zhy.autolayout.AutoRelativeLayout
		android:id="@+id/layout_username"
		android:layout_width="match_parent"
		android:layout_marginTop="30px"
		android:layout_height="170px"
		android:background="#ffffff"
	>
		<TextView
			android:id="@+id/tv_userName_txt"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_marginLeft="70px"
			android:text="姓名"
			android:textColor="@color/secondblack"
			android:textSize="@dimen/bodytextsize"/>

		<TextView
			android:id="@+id/tv_userName"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_toRightOf="@id/tv_userName_txt"
			android:layout_marginLeft="130px"
			android:textColor="@color/black"
			android:textSize="@dimen/bodytextsize"/>

		<View
			android:id="@+id/line_name"
			android:layout_width="match_parent"
			android:layout_height="@dimen/onepx"
			android:layout_alignParentBottom="true"
			android:background="@color/register_line_color"
		/>
	</com.zhy.autolayout.AutoRelativeLayout>

	<!-- 卡类型-->
	<com.zhy.autolayout.AutoRelativeLayout
		android:id="@+id/lay_name"
		android:layout_width="match_parent"
		android:layout_height="170px"
		android:background="#ffffff"
	>
		<TextView
			android:id="@+id/tv_cardtype_txt"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_marginLeft="70px"
			android:text="卡类型"
			android:textColor="@color/secondblack"
			android:textSize="@dimen/bodytextsize"/>

		<TextView
			android:id="@+id/tv_cardtype"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_toRightOf="@id/tv_cardtype_txt"
			android:layout_marginLeft="90px"
			android:text="招商银行储蓄卡"
			android:textColor="@color/colorPrimary"
			android:textSize="@dimen/bodytextsize"/>

		<View
			android:layout_width="match_parent"
			android:layout_height="@dimen/onepx"
			android:layout_alignParentBottom="true"
			android:background="@color/register_line_color"
		/>
	</com.zhy.autolayout.AutoRelativeLayout>
	<!-- 开户省份-->
	<com.zhy.autolayout.AutoRelativeLayout
		android:id="@+id/province_id"
		android:layout_width="match_parent"
		android:layout_height="170px"
		android:background="#ffffff"
	>
		<TextView
			android:id="@+id/tv_province_txt"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_marginLeft="70px"
			android:text="开户省份"
			android:textColor="@color/secondblack"
			android:textSize="@dimen/bodytextsize"/>
		<EditText
			android:id="@+id/edt_province"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_toRightOf="@id/tv_province_txt"
			android:layout_marginLeft="50px"
			android:background="@null"
			android:cursorVisible="true"
			android:focusable="false"
			android:hint="选择省份"
			android:inputType="number"
			android:maxLength="30"
			android:textColor="@android:color/black"
			android:textColorHint="#cccccc"
			android:textSize="@dimen/bodytextsize"/>
		<View
			android:layout_width="match_parent"
			android:layout_height="@dimen/onepx"
			android:layout_alignParentBottom="true"
			android:background="@color/register_line_color"
		/>
	</com.zhy.autolayout.AutoRelativeLayout>
	<!-- 开户城市-->
	<com.zhy.autolayout.AutoRelativeLayout
		android:id="@+id/city_id"
		android:layout_width="match_parent"
		android:layout_height="170px"
		android:background="#ffffff"
	>
		<TextView
			android:id="@+id/tv_city_txt"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_marginLeft="70px"
			android:text="开户城市"
			android:textColor="@color/secondblack"
			android:textSize="@dimen/bodytextsize"/>
		<EditText
			android:id="@+id/edt_city"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:focusable="false"
			android:layout_toRightOf="@id/tv_city_txt"
			android:layout_marginLeft="50px"
			android:background="@null"
			android:cursorVisible="true"
			android:hint="选择城市"
			android:inputType="number"
			android:maxLength="30"
			android:textColor="@android:color/black"
			android:textColorHint="#cccccc"
			android:textSize="@dimen/bodytextsize"/>
		<View
			android:layout_width="match_parent"
			android:layout_height="@dimen/onepx"
			android:layout_alignParentBottom="true"
			android:background="@color/register_line_color"
		/>
	</com.zhy.autolayout.AutoRelativeLayout>
	<!-- 开户支行-->
	<com.zhy.autolayout.AutoRelativeLayout
		android:id="@+id/lay_id"
		android:layout_width="match_parent"
		android:layout_height="170px"
		android:background="#ffffff"
	>
		<TextView
			android:id="@+id/tv_branch_txt"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_marginLeft="70px"
			android:text="开户支行"
			android:textColor="@color/secondblack"
			android:textSize="@dimen/bodytextsize"/>
		<EditText
			android:id="@+id/edt_branch"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_toRightOf="@id/tv_branch_txt"
			android:layout_marginLeft="50px"
			android:background="@null"
			android:cursorVisible="true"
			android:focusable="false"
			android:hint="选择支行"
			android:inputType="number"
			android:maxLength="30"
			android:textColor="@android:color/black"
			android:textColorHint="#cccccc"
			android:textSize="@dimen/bodytextsize"/>
		<View
			android:layout_width="match_parent"
			android:layout_height="@dimen/onepx"
			android:layout_alignParentBottom="true"
			android:background="@color/register_line_color"
		/>
	</com.zhy.autolayout.AutoRelativeLayout>

	<!-- 手机号-->
	<com.zhy.autolayout.AutoRelativeLayout
		android:id="@+id/mobile_id"
		android:layout_width="match_parent"
		android:layout_height="170px"
		android:background="#ffffff"
		android:visibility="gone"
	>
		<TextView
			android:id="@+id/tv_mobile_txt"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_marginLeft="70px"
			android:text="手机号"
			android:textColor="@color/secondblack"
			android:textSize="@dimen/bodytextsize"/>
		<EditText
			android:id="@+id/edt_mobile"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_toRightOf="@id/tv_mobile_txt"
			android:layout_marginLeft="90px"
			android:background="@null"
			android:cursorVisible="true"
			android:hint="请输入银行卡预留手机号"
			android:inputType="number"
			android:maxLength="11"
			android:textColor="@android:color/black"
			android:textColorHint="#cccccc"
			android:textSize="@dimen/bodytextsize"/>
		<View
			android:layout_width="match_parent"
			android:layout_height="@dimen/onepx"
			android:layout_alignParentBottom="true"
			android:background="@color/register_line_color"
		/>
	</com.zhy.autolayout.AutoRelativeLayout>

	<!-- 验证码-->
	<com.zhy.autolayout.AutoRelativeLayout
		android:id="@+id/mac_id"
		android:layout_width="match_parent"
		android:layout_height="170px"
		android:background="#ffffff"
		android:visibility="gone"
	>
		<TextView
			android:id="@+id/tv_mac_txt"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_marginLeft="70px"
			android:text="验证码"
			android:textColor="@color/secondblack"
			android:textSize="@dimen/bodytextsize"/>
		<EditText
			android:id="@+id/edt_mac"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_toRightOf="@id/tv_mac_txt"
			android:layout_marginLeft="90px"
			android:background="@null"
			android:cursorVisible="true"
			android:hint="填写验证码"
			android:inputType="number"
			android:maxLength="4"
			android:textColor="@android:color/black"
			android:textColorHint="#cccccc"
			android:textSize="@dimen/bodytextsize"/>
		<TextView
			android:id="@+id/tv_again_mac"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_marginRight="50px"
			android:layout_centerVertical="true"
			android:text="发送验证码"
			android:textColor="@color/colorPrimary"
			android:textSize="14sp"
		/>
		<View
			android:layout_width="match_parent"
			android:layout_height="@dimen/onepx"
			android:layout_alignParentBottom="true"
			android:background="@color/register_line_color"
		/>
	</com.zhy.autolayout.AutoRelativeLayout>
	<!-- 协议-->
	<com.zhy.autolayout.AutoRelativeLayout
		android:id="@+id/lay_contract"
		android:layout_width="match_parent"
		android:gravity="center_horizontal"
		android:layout_height="wrap_content"
		android:layout_below="@+id/lay_id"
		android:layout_marginLeft="70px"
	>
		<com.rey.material.widget.CheckBox
			android:id="@+id/cb_agree"
			style="@style/LightCheckBox"
			android:checked="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="80px"/>
		<TextView
			android:id="@+id/tv1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="28px"
			android:layout_marginTop="80px"
			android:layout_toRightOf="@+id/cb_agree"
			android:text="@string/agree"/>
		<TextView
			android:id="@+id/tv_pay_agree"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="80px"
			android:layout_toRightOf="@+id/tv1"
			android:text="《快捷支付开通协议》"
			android:textColor="@color/colorPrimary"/>
	</com.zhy.autolayout.AutoRelativeLayout>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/lay_id"
		android:layout_marginLeft="90px"
		android:layout_marginRight="90px"
		android:layout_marginTop="95px">
		<com.rey.material.widget.Button
			android:id="@+id/btn_next"
			style="@style/LightRaiseColorButtonRippleStyle"
			android:layout_width="match_parent"
			android:text="完成"
			android:textSize="@dimen/contenttitletext"
		/>
	</RelativeLayout>


</com.zhy.autolayout.AutoLinearLayout>
