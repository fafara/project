<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                       android:layout_width="match_parent"
                                       android:layout_height="match_parent"
                                       android:orientation="vertical">
	<com.zhy.autolayout.AutoRelativeLayout
		android:id="@+id/title"
		android:layout_width="match_parent"
		android:layout_height="@dimen/title_height"
		android:background="@color/title_bg"
		android:orientation="horizontal">
		<ImageView
			android:id="@+id/btn_back"
			android:layout_width="110px"
			android:layout_height="match_parent"
			android:layout_alignParentLeft="true"
			android:layout_gravity="center_vertical"
			android:focusable="false"
			android:src="@drawable/ryxtitlebackbg"
		/>
		<TextView
			android:id="@+id/tv_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:text="@string/bind_creditcard"
			android:textColor="@android:color/white"
			android:textSize="@dimen/maxtextsize"/>
	</com.zhy.autolayout.AutoRelativeLayout>

	<com.zhy.autolayout.AutoRelativeLayout
		android:id="@+id/lay_name"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/title"
		android:layout_marginLeft="70px"
	>
		<EditText
			android:id="@+id/tv_userName"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="100px"
			android:background="@null"
			android:hint="请输入收款人姓名"
			android:textColor="@android:color/black"
			android:textColorHint="@color/fourblack"
			android:singleLine="true"
			android:textSize="@dimen/bodytextsize"/>

		<View
			android:id="@+id/line_name"
			android:layout_width="match_parent"
			android:layout_height="@dimen/onepx"
			android:layout_below="@+id/tv_userName"
			android:layout_marginTop="35px"
			android:background="@color/register_line_color"/>
	</com.zhy.autolayout.AutoRelativeLayout>
	<com.zhy.autolayout.AutoRelativeLayout
		android:id="@+id/lay_id"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/lay_name"
		android:layout_marginLeft="70px"
		android:layout_marginRight="70px"
	>
		<EditText
			android:id="@+id/edt_debitcardNo"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_marginTop="52px"
			android:background="@null"
			android:cursorVisible="true"
			android:hint="@string/please_enter_or_swipe_card_to_get_people_withdrawals"
			android:inputType="number"
			android:maxLength="24"
			android:textColor="@android:color/black"
			android:textColorHint="@color/fourblack"
			android:textSize="@dimen/bodytextsize"/>
		<ImageView
			android:id="@+id/iv_swipecard"
			android:layout_width="104px"
			android:layout_height="80px"
			android:layout_alignParentRight="true"
			android:layout_marginTop="52px"
			android:scaleType="fitCenter"
			android:src="@drawable/img_swiping_card"/>
	</com.zhy.autolayout.AutoRelativeLayout>
	<View
		android:layout_width="match_parent"
		android:layout_height="@dimen/onepx"
		android:layout_below="@+id/lay_id"
		android:layout_marginLeft="70px"
		android:layout_marginTop="42px"
		android:background="@color/register_line_color"/>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/lay_id"
		android:layout_marginLeft="90px"
		android:layout_marginRight="90px"
		android:layout_marginTop="95px">
		<com.rey.material.widget.Button
			android:id="@+id/btn_next"
			style="@style/LightRaiseColorButtonRippleStyle"
			android:layout_width="match_parent"
			android:text="@string/next"
			android:textSize="@dimen/contenttitletext"
		/>
	</RelativeLayout>


</com.zhy.autolayout.AutoRelativeLayout>
