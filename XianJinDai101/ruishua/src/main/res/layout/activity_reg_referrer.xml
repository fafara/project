<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/ryxpaytitle"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_70_dip"
        android:layout_marginTop="@dimen/dimen_60_dip"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="36dp"
            android:orientation="horizontal"
            android:paddingLeft="25dp"
            android:paddingRight="25dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/img_ok"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:gravity="center_vertical|left"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_h1"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|start"
                    android:text="@string/register_success_line1"
                    android:textColor="#ff2b323a"
                    android:textSize="16sp"
                    android:textStyle="bold"/>


            </LinearLayout>
        </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_30_dip">
    <TextView
        android:id="@+id/tv_h2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|start"
        android:text="如有推荐人,请填写推荐人手机号,如果没有则直接跳过."
        android:textColor="@color/blue"
        android:textSize="12sp"
        android:layout_marginTop="@dimen/dimen_30_dip"
        />
</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_80_dip"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="推荐码:"
                android:textSize="17sp"/>

            <EditText
                android:id="@+id/et_referrer_phonenumber"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_weight="1"
                android:background="@null"
                android:cursorVisible="true"
                android:ems="11"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="请输入推荐人手机号"
                android:inputType="number"
                android:maxLength="11"
                android:textColorHint="#cccccc"
                android:textCursorDrawable="@null"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_mobile"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="@dimen/dimen_20_dip"
            android:background="@color/login_edt_getfocus"
            android:orientation="horizontal"/>

        <com.rey.material.widget.Button
            android:id="@+id/btn_reg_referrer"
            style="@style/LightRaiseColorButtonRippleStyle"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dimen_100_dip"
            android:gravity="center"
            android:text="确认"
            android:textSize="@dimen/contenttitletext"
            />
        <com.rey.material.widget.Button
            android:id="@+id/btn_skip"
            style="@style/LightwhiteColorButtonRippleStyle"
            android:layout_width="match_parent"
            android:layout_marginTop="50px"
            android:gravity="center"
            android:textSize="@dimen/contenttitletext"
            android:text="跳过,前往登录页面"/>
    </LinearLayout>
</LinearLayout>