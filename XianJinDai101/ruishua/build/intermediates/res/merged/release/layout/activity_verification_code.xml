<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <include layout="@layout/ryxpaytitle"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_70_dip"
        android:layout_marginTop="@dimen/dimen_60_dip"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_mac_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_verification_code"
            android:textColor="#000000"
            android:visibility="gone"
            android:textSize="15sp"/>
        <RelativeLayout
            android:id="@+id/mac_codelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_60_dip"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="horizontal"
            >
            <EditText
                android:id="@+id/et_mac_code"
                style="@style/LightEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_40_dip"
                android:layout_marginRight="@dimen/dimen_40_dip"
                android:hint="请输入短信校验码"
                android:inputType="number"
                android:maxLength="10"
                android:background="@null"
                android:textColorHint="#cccccc"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/tv_again_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dimen_40_dip"
                android:text="重新发送"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:visibility="invisible"
                />
        </RelativeLayout>
        <View
            android:id="@+id/mac_code_layout_bootomview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/onepx"
            android:layout_alignParentBottom="true"
            android:background="@color/login_edt_getfocus"
            android:visibility="gone"
            />
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/lay_cvn"
            android:layout_width="match_parent"
            android:layout_height="170px"
            android:visibility="gone"
            >
            <TextView
                android:id="@+id/tv_cvn_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50px"
                android:text="安全码:"
                android:textColor="@color/secondblack"
                android:textSize="@dimen/bodytextsize"/>
            <EditText
                android:id="@+id/edt_cvn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_cvn_txt"
                android:layout_marginLeft="90px"
                android:background="@null"
                android:cursorVisible="true"
                android:hint="@string/input_security_code"
                android:inputType="number"
                android:maxLength="5"
                android:textColor="@android:color/black"
                android:textColorHint="#cccccc"
                android:textSize="@dimen/bodytextsize"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/onepx"
                android:layout_alignParentBottom="true"
                android:background="@color/register_line_color"
                />
        </com.zhy.autolayout.AutoRelativeLayout>

        <LinearLayout
            android:id="@+id/ll_username"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/login_edt_getfocus"
            android:orientation="horizontal"/>
        <com.rey.material.widget.Button
            android:id="@+id/btn_verification_done"
            style="@style/LightRaiseColorButtonRippleStyle"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dimen_80_dip"
            android:gravity="center"
            android:text="完成"
            android:textSize="@dimen/contenttitletext"
            />
    </LinearLayout>
</LinearLayout>