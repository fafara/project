<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<include layout="@layout/ryxpaytitle"></include>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="@dimen/dimen_70_dip"
		android:layout_marginTop="@dimen/dimen_60_dip"
		android:gravity="center"
		android:orientation="vertical">
		<TextView
			android:id="@+id/tv_register_mac_tip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/tv_register_mac_tip"
			android:textColor="#000000"
			android:textSize="15sp"/>
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/dimen_60_dip"
			android:gravity="center"
			android:orientation="horizontal"
		>
			<EditText
				android:id="@+id/register_et_mac_code"
				style="@style/LightEditText"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="@dimen/dimen_40_dip"
				android:layout_marginRight="@dimen/dimen_40_dip"
				android:hint="请输入验证码"
				android:inputType="number"
				android:maxLength="4"
				android:background="@null"
				android:textColorHint="#cccccc"
				android:textSize="15sp"/>
			<TextView
				android:id="@+id/tv_again_mac"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_marginRight="@dimen/dimen_40_dip"
				android:text="重新发送"
				android:textColor="@color/colorPrimary"
				android:textSize="14sp"
			/>
		</RelativeLayout>
		<LinearLayout
			android:id="@+id/ll_username"
			android:layout_width="match_parent"
			android:layout_height="1px"
			android:background="@color/login_edt_getfocus"
			android:orientation="horizontal"/>
		<com.rey.material.widget.Button
			android:id="@+id/btn_register_done"
			style="@style/LightRaiseColorButtonRippleStyle"
			android:layout_width="match_parent"
			android:layout_marginTop="@dimen/dimen_80_dip"
			android:gravity="center"
			android:text="@string/btn_resiger_done"
			android:textSize="@dimen/contenttitletext"
		/>
	</LinearLayout>
</LinearLayout>