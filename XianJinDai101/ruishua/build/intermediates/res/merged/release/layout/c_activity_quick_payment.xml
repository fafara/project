<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/grey_bg"
	android:orientation="vertical"
	tools:context="com.ryx.ryxcredit.activity.QuickPaymentActivity">

	<include layout="@layout/c_widget_title"/>

	<android.support.v4.widget.NestedScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
        android:paddingBottom="40px">

		<com.zhy.autolayout.AutoLinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/grey_bg"
			android:orientation="vertical">

			<com.zhy.autolayout.AutoLinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/white"
				android:orientation="vertical">

				<com.zhy.autolayout.AutoLinearLayout
					android:id="@+id/lay_top"
					android:layout_width="900px"
					android:layout_height="wrap_content"
					android:layout_marginLeft="90px"
					android:layout_marginRight="90px"
					android:layout_marginTop="120px"
					android:orientation="vertical">

					<com.zhy.autolayout.AutoRelativeLayout
						android:layout_width="match_parent"
						android:layout_height="300px"
						android:orientation="horizontal">

						<com.zhy.autolayout.AutoLinearLayout
							android:id="@+id/ll_payment_content"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginLeft="60px"
							android:layout_marginTop="75px"
							android:orientation="vertical">

							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="@string/c_sure_borrow_amount"
								android:textColor="@android:color/white"
								android:textSize="@dimen/commontextsize"/>

							<TextView
								android:id="@+id/tv_payment_top_money"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_marginTop="15px"
								android:layout_marginBottom="10px"
								android:textColor="@color/white"
								android:textSize="@dimen/large_textsize"/>
						</com.zhy.autolayout.AutoLinearLayout>

						<TextView
							android:id="@+id/tv_status"
							android:layout_width="180px"
							android:layout_height="90px"
							android:layout_marginRight="45px"
							android:layout_marginBottom="25px"
							android:background="@drawable/c_white_rectangle"
							android:layout_alignBottom="@id/ll_payment_content"
							android:layout_alignParentRight="true"
							android:gravity="center"
							android:text="使用中"
							android:textColor="@android:color/white"
							android:textSize="@dimen/commontextsize"/>
					</com.zhy.autolayout.AutoRelativeLayout>

					<com.zhy.autolayout.AutoLinearLayout
						android:id="@+id/lay_bottom"
						android:layout_width="match_parent"
						android:layout_height="100px"
						android:gravity="center"
						android:orientation="horizontal">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="到期还款日"
							android:textColor="@color/white"
							android:textSize="@dimen/commontextsize"/>

						<TextView
							android:id="@+id/c_tv_repay_date"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginLeft="20px"
							android:textColor="@color/white"
							android:textSize="@dimen/commontextsize"/>
					</com.zhy.autolayout.AutoLinearLayout>
				</com.zhy.autolayout.AutoLinearLayout>

				<TextView
					android:id="@+id/c_tv_overdatetip"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="20px"
					android:visibility="gone"
					android:gravity="center"
					android:textColor="@color/red_second"
					android:textSize="@dimen/bodylittletextsize"/>

				<View
					style="@style/BlackHorizontalLine"
					android:layout_marginTop="20dp"/>
				<com.zhy.autolayout.AutoRelativeLayout
					android:id="@+id/rl_overdue_amount"
					android:layout_width="match_parent"
					android:visibility="gone"
					android:paddingTop="10px"
					android:layout_height="wrap_content">

					<TextView
						android:text="未还合同金额"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="90px"
						android:textColor="@color/red_second"
						android:layout_marginBottom="20px"
						android:textSize="@dimen/commontextsize"/>

					<TextView
						android:id="@+id/tv_unrepay_pay"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentRight="true"
						android:layout_marginRight="90px"
						android:layout_marginBottom="20px"
						android:textColor="@color/red_second"
						android:textSize="@dimen/commontextsize"/>

					<View
						style="@style/BlackHorizontalLine"
						android:layout_alignParentBottom="true"/>
				</com.zhy.autolayout.AutoRelativeLayout>

				<com.zhy.autolayout.AutoRelativeLayout
					android:id="@+id/rl_overdue_content"
					android:layout_width="match_parent"
					android:visibility="gone"
					android:paddingTop="20px"
					android:layout_height="wrap_content">

					<TextView
						android:id="@+id/tv_overdue_day"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="90px"
						android:textColor="@color/red_second"
						android:textSize="@dimen/commontextsize"
						android:layout_marginBottom="20px"/>

					<TextView
						android:id="@+id/tv_overdue_pay"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentRight="true"
						android:layout_marginRight="90px"
						android:layout_marginBottom="20px"
						android:textColor="@color/red_second"
						android:textSize="@dimen/commontextsize"/>

					<View
						style="@style/BlackHorizontalLine"
						android:layout_alignParentBottom="true"/>
				</com.zhy.autolayout.AutoRelativeLayout>
				<com.zhy.autolayout.AutoRelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingTop="20px"
					>
					<TextView
						android:text="@string/c_repayment_money"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="90px"
						android:textColor="@color/threeblack"
						android:textSize="@dimen/commontextsize"
						android:layout_gravity="center_vertical"
						android:layout_marginBottom="20px"
						/>
					<TextView
						android:id="@+id/c_tv_show_record"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="@color/xd_blue"
						android:text="查看"
						android:layout_gravity="center_vertical"
						android:layout_marginRight="60px"
						android:layout_marginBottom="20px"
						android:layout_alignParentRight="true"
						android:textSize="@dimen/commontextsize"/>
					<View
						style="@style/BlackHorizontalLine"
						android:layout_alignParentBottom="true"/>
				</com.zhy.autolayout.AutoRelativeLayout>
                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
					android:paddingTop="10px"
					android:paddingBottom="10px"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/img_banklogo"
                        android:layout_width="70px"
                        android:layout_height="70px"
						android:layout_marginLeft="90px" />
                    <com.rey.material.widget.TextView
                        android:id="@+id/tv_bankNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30px"
                        android:layout_toRightOf="@+id/img_banklogo"
                        android:text=""
                        android:textAlignment="center"
						android:layout_gravity="center_vertical"
                        android:textSize="@dimen/bodytextsize"/>
                    <TextView
                        android:id="@+id/c_btn_change"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
						android:layout_toRightOf="@+id/tv_bankNo"
                        android:layout_marginRight="60px"
                        android:background="@android:color/transparent"
                        android:gravity="right"
                        android:text="选择还款卡"
						android:visibility="gone"
						android:layout_gravity="center_vertical"
                        android:textColor="@color/xd_blue"
                        android:textSize="@dimen/bodytextsize" />
                </com.zhy.autolayout.AutoLinearLayout>
                <View
                    style="@style/BlackHorizontalLine"
                    android:layout_alignParentBottom="true"/>
				<com.zhy.autolayout.AutoRelativeLayout
					android:id="@+id/rl_overdue_payment"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="40px"
					>
					<TextView
						android:id="@+id/c_current_repayment_amount_tv"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="40px"
						android:layout_centerHorizontal="true"
						android:textColor="@color/threeblack"
						android:textSize="@dimen/bodytextsize"
					/>
				<com.zhy.autolayout.AutoRelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="40px"
					android:layout_below="@+id/c_current_repayment_amount_tv"
					>
					<EditText
						android:id="@+id/c_tv_repayment_money"
						android:layout_width="450px"
						android:layout_height="150px"
						android:layout_centerHorizontal="true"
						android:background="@color/grey_bg"
						android:hint="请输入还款金额"
						android:gravity="center"
						android:inputType="numberDecimal"
						android:maxLength="12"
						android:padding="20px"
						android:textColor="@color/black"
						android:textColorHint="@color/fourblack"
						android:textSize="14sp"/>
			</com.zhy.autolayout.AutoRelativeLayout>
				</com.zhy.autolayout.AutoRelativeLayout>
				<com.zhy.autolayout.AutoLinearLayout
					android:id="@+id/c_ll_loanterm"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="60px"
					android:gravity="center_horizontal"
					android:orientation="horizontal">

					<com.zhy.autolayout.AutoLinearLayout
						android:id="@+id/lly_skhk"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:background="@drawable/c_repayment_type_press"
						android:gravity="center_horizontal|center_vertical"
						android:orientation="vertical">

						<com.rey.material.widget.TextView
							android:id="@+id/tv_skhk"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginBottom="24px"
							android:layout_marginLeft="111px"
							android:layout_marginRight="111px"
							android:layout_marginTop="24px"
							android:text="刷卡还款"
							android:textColor="@android:color/white"
							android:textSize="@dimen/bodylittletextsize" />
					</com.zhy.autolayout.AutoLinearLayout>

					<com.zhy.autolayout.AutoLinearLayout
						android:id="@+id/lly_dkhk"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:background="@drawable/c_repayment_type_bg"
						android:gravity="center_horizontal|center_vertical"
						android:orientation="vertical">

						<com.rey.material.widget.TextView
							android:id="@+id/tv_dkhk"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginBottom="24px"
							android:layout_marginLeft="111px"
							android:layout_marginRight="111px"
							android:layout_marginTop="24px"
							android:text="代扣还款"
							android:textSize="@dimen/bodylittletextsize" />
					</com.zhy.autolayout.AutoLinearLayout>
				</com.zhy.autolayout.AutoLinearLayout>
			</com.zhy.autolayout.AutoLinearLayout>

			<com.zhy.autolayout.AutoLinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="60px"
				android:gravity="center_horizontal"
				android:orientation="horizontal"
				android:visibility="gone">

				<com.zhy.autolayout.AutoLinearLayout
					android:id="@+id/c_swiper_layout"
					android:layout_width="320px"
					android:layout_height="180px"
					android:background="@drawable/c_repayment_type_bg"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="vertical">

					<com.rey.material.widget.TextView
						android:id="@+id/c_swiper_tv"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/c_repayment_swiper"
						android:textSize="16sp"/>

					<com.rey.material.widget.TextView
						android:id="@+id/c_swiper_comment_tv"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="10px"
						android:text="@string/c_repayment_swiper_comment"
						android:textSize="13sp"/>
				</com.zhy.autolayout.AutoLinearLayout>

				<com.zhy.autolayout.AutoLinearLayout
					android:id="@+id/c_auto_layout"
					android:layout_width="320px"
					android:layout_height="180px"
					android:background="@drawable/c_repayment_type_bg"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="vertical">

					<com.rey.material.widget.TextView
						android:id="@+id/c_auto_tv"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/c_repayment_auto"
						android:textSize="16sp"/>

					<com.rey.material.widget.TextView
						android:id="@+id/c_auto_comment_tv"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="10px"
						android:text="@string/c_repayment_auto_comment"
						android:textSize="13sp"/>
				</com.zhy.autolayout.AutoLinearLayout>
			</com.zhy.autolayout.AutoLinearLayout>

			<com.rey.material.widget.Button
				android:id="@+id/c_payback_money_btn"
				style="@style/CLightRaiseColorButtonRippleStyle"
				android:layout_width="match_parent"
				android:layout_height="40dp"
				android:layout_marginLeft="90px"
				android:layout_marginRight="90px"
				android:layout_marginTop="90px"
				android:text="@string/c_repayment_sure"
				android:textSize="@dimen/bodytextsize"/>
			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="20px"
				android:layout_marginLeft="90px"
				android:gravity="left"
				android:textColor="@color/threeblack"
				android:text="温馨提示："
				android:textSize="@dimen/bodylittletextsize" />
			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="20px"
				android:layout_marginLeft="90px"
				android:gravity="left"
				android:textColor="@color/threeblack"
				android:text="@string/tv_repayment_tips"
				android:textSize="@dimen/bodylittletextsize" />
			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="20px"
				android:layout_marginLeft="90px"
				android:gravity="left"
				android:textColor="@color/threeblack"
				android:text="@string/tv_borrow_state_tip"
				android:textSize="@dimen/bodylittletextsize"/>
			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="20px"
				android:layout_marginLeft="90px"
				android:gravity="left"
				android:textColor="@color/threeblack"
				android:text="@string/tv_repayment_tip"
				android:textSize="@dimen/bodylittletextsize"/>
		</com.zhy.autolayout.AutoLinearLayout>
	</android.support.v4.widget.NestedScrollView>
</com.zhy.autolayout.AutoLinearLayout>