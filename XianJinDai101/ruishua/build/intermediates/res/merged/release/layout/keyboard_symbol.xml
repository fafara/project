
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/rlframe"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="fill_parent"
                android:layout_height="54dip"
                android:weightSum="4">

                <Button
                    android:id="@+id/btn_symbol1"
                     android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text=" ! " android:layout_weight="1" android:textColor="@color/BLACK" android:textSize="18sp" android:textStyle="normal" android:background="@drawable/keybtnbg" />

                <Button
                    android:id="@+id/btn_symbol2"
                     android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" android:textColor="@color/BLACK" android:textSize="18sp" android:textStyle="normal" android:text=' @' android:background="@drawable/keybtnbg" />

                <Button
                    android:id="@+id/btn_symbol3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="# " android:layout_weight="1" android:textColor="@color/BLACK" android:textSize="18sp" android:textStyle="normal" android:background="@drawable/keybtnbg" />

                <Button
                    android:id="@+id/btn_symbol4"
                     android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="%"
                    android:textColor="@color/BLACK"
                    android:textSize="18sp"
                    android:textStyle="normal" android:background="@drawable/keybtnbg"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="54dip" >

                <Button
                    android:id="@+id/btn_symbol5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="^" android:layout_weight="1" android:textColor="@color/BLACK" android:textSize="18sp" android:textStyle="normal" android:background="@drawable/keybtnbg"/>

                <Button
                    android:id="@+id/btn_symbol6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="&amp;" android:layout_weight="1" android:textColor="@color/BLACK" android:textSize="18sp" android:textStyle="normal" android:background="@drawable/keybtnbg" />

                <Button
                    android:id="@+id/btn_symbol7"
                     android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="*" android:layout_weight="1" android:textColor="@color/BLACK" android:textSize="18sp" android:textStyle="normal"  android:background="@drawable/keybtnbg"/>

                <Button
                    android:id="@+id/btn_symbol8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text=","
                    android:textColor="@color/BLACK"
                    android:textSize="18sp"
                    android:textStyle="normal" android:background="@drawable/keybtnbg"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="53dip"
                android:weightSum="4">

                <Button
                    android:id="@+id/btn_symbol9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="." android:textSize="18sp" android:textStyle="normal" android:background="@drawable/keybtnbg"  android:layout_weight="1" android:textColor="@color/BLACK"/>

                <Button
                    android:id="@+id/btn_symbol10"
                     android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text=" ?" android:textStyle="normal" android:textSize="18sp" android:background="@drawable/keybtnbg" android:layout_weight="1" android:textColor="@color/BLACK"/>

                
                  <ImageButton 
				    android:id="@+id/btn_clear"
				    android:layout_width="0dp"
                    android:layout_height="match_parent"
                      android:layout_weight="2"
                      android:background="@drawable/keybtnbg"
                      android:src="@drawable/delbtnbg"
				    />

            </LinearLayout>

        </LinearLayout>
