<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ver="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">
    <include layout="@layout/ryxpaytitle"/>
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="为了您的账户安全,输入您的4位验证码"
    android:gravity="center"
    android:layout_marginTop="100px"
    android:textColor="@color/secondblack"
    android:textSize="@dimen/maxtextsize"/>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="50px"
        android:textColor="@color/threeblack"
        android:textSize="@dimen/bodytextsize"/>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="100px"
    android:layout_marginBottom="16dp"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/verificationCode_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/verificationCode_edit1"
            android:layout_width="120px"
            android:layout_height="120px"
            android:gravity="center"
            android:ems="1"
            android:maxLength="1"
            android:inputType="number"
            android:layout_marginRight="10px"
            android:background="@drawable/verificationedit_bg"/>
        <EditText
            android:id="@+id/verificationCode_edit2"
            android:layout_width="120px"
            android:layout_height="120px"
            android:gravity="center"
            android:ems="1"
            android:maxLength="1"
            android:inputType="number"
            android:layout_marginRight="10px"
            android:background="@drawable/verificationedit_bg"/>
        <EditText
            android:id="@+id/verificationCode_edit3"
            android:layout_width="120px"
            android:layout_height="120px"
            android:layout_marginRight="10px"
            android:gravity="center"
            android:ems="1"
            android:inputType="number"
            android:maxLength="1"
            android:background="@drawable/verificationedit_bg"/>
        <EditText
            android:id="@+id/verificationCode_edit4"
            android:layout_width="120px"
            android:layout_height="120px"
            android:gravity="center"
            android:ems="1"
            android:inputType="number"
            android:maxLength="1"
            android:background="@drawable/verificationedit_bg"/>


    </com.zhy.autolayout.AutoLinearLayout>


</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.rey.material.widget.Button

            android:id="@+id/bt_send"
            style="@style/LightRaiseColorButtonRippleStyle"
            android:layout_marginTop="50px"
            android:layout_marginLeft="70px"
            android:layout_marginRight="70px"
            android:layout_width="match_parent"
            android:gravity="center"
            android:visibility="gone"
            android:textSize="@dimen/contenttitletext"
            android:text="重新发送"/>
        <com.rey.material.widget.Button
            android:id="@+id/bt_countdown"
            style="@style/LightwhiteColorButtonRippleStyle"
            android:layout_width="match_parent"
            android:layout_marginTop="50px"
            android:layout_marginLeft="70px"
            android:layout_marginRight="70px"
            android:gravity="center"
            android:text="重新发送(60s)"
            android:textSize="@dimen/contenttitletext"
            />


    </LinearLayout>

</com.zhy.autolayout.AutoLinearLayout>
