<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_bg"
    android:orientation="vertical">

    <include
        android:id="@+id/title"
        layout="@layout/ryxpaytitle"
        android:layout_width="match_parent"
        android:layout_height="56dp" />
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:layout_marginTop="20px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70px"
            android:layout_gravity="center_vertical"
            android:text="@string/user_name"
            android:textSize="@dimen/action_button_text_size" />

        <EditText
            android:id="@+id/edt_userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="52px"
            android:layout_marginBottom="52px"
            android:layout_marginLeft="100px"
            android:background="@null"
            android:focusable="false"
            android:textColor="@android:color/black"
            android:textSize="@dimen/action_button_text_size" />
    </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/onepx">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70px"
            android:layout_gravity="center_vertical"
            android:text="@string/card_type"
            android:textSize="@dimen/action_button_text_size" />
        <EditText
            android:id="@+id/edt_cardType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="52px"
            android:layout_marginBottom="52px"
            android:layout_marginLeft="60px"
            android:background="@null"
            android:focusable="false"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/action_button_text_size" />
    </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/edt_date_linerlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginTop="@dimen/onepx">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="70px"
            android:text="@string/enddate"
            android:textSize="@dimen/action_button_text_size" />
        <EditText
            android:id="@+id/edt_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="52px"
            android:layout_marginBottom="52px"
            android:layout_marginLeft="60px"
            android:background="@null"
            android:cursorVisible="true"
            android:hint="@string/choose_date"
            android:textColor="@android:color/black"
            android:textColorHint="@color/fourblack"
            android:inputType="phone"
            android:textSize="@dimen/action_button_text_size" />
    </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/securityCode_linerlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginTop="@dimen/onepx">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="70px"
            android:text="@string/security_code"
            android:textSize="@dimen/action_button_text_size" />
        <EditText
            android:id="@+id/edt_securityCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="52px"
            android:layout_marginBottom="52px"
            android:layout_marginLeft="60px"
            android:background="@null"
            android:cursorVisible="true"
            android:hint="@string/input_security_code"
            android:textColor="@android:color/black"
            android:textColorHint="@color/fourblack"
            android:maxLength="5"
            android:inputType="number"
            android:textSize="@dimen/action_button_text_size" />
    </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/onepx">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="70px"
            android:text="@string/phone_no"
            android:textSize="@dimen/action_button_text_size" />
        <EditText
            android:id="@+id/edt_phoneNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="52px"
            android:layout_marginBottom="52px"
            android:layout_marginLeft="60px"
            android:background="@null"
            android:cursorVisible="true"
            android:hint="@string/input_phone_no"
            android:inputType="number"
            android:maxLength="11"
            android:textColor="@android:color/black"
            android:textColorHint="@color/fourblack"
            android:textSize="@dimen/action_button_text_size" />
    </com.zhy.autolayout.AutoLinearLayout>
    <!-- 验证码-->
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/mac_id"
        android:layout_width="match_parent"
        android:layout_height="170px"
        android:background="#ffffff"
        android:layout_marginTop="@dimen/onepx"
        >
        <TextView
            android:id="@+id/tv_mac_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="70px"
            android:text="验证码"
            android:textColor="@color/secondblack"
            android:textSize="@dimen/action_button_text_size" />
        <EditText
            android:id="@+id/edt_mac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_mac_txt"
            android:layout_marginLeft="90px"
            android:background="@null"
            android:cursorVisible="true"
            android:hint="填写验证码"
            android:inputType="number"
            android:maxLength="4"
            android:textColor="@android:color/black"
            android:textColorHint="#cccccc"
            android:textSize="@dimen/action_button_text_size"/>
        <TextView
            android:id="@+id/tv_again_mac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50px"
            android:layout_centerVertical="true"
            android:text="发送验证码"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/onepx"
            android:layout_alignParentBottom="true"
            android:background="@color/register_line_color"
            />
    </com.zhy.autolayout.AutoRelativeLayout>
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/lay_contract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/grey_bg"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        >
        <com.rey.material.widget.CheckBox
            android:id="@+id/cb_agree"
            style="@style/LightCheckBox"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80px"/>
        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28px"
            android:layout_marginTop="80px"
            android:layout_toRightOf="@+id/cb_agree"
            android:text="@string/agree"/>
        <TextView
            android:id="@+id/tv_payProtocols"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80px"
            android:layout_toRightOf="@+id/tv1"
            android:text="@string/quick_pay_protocols"
            android:textColor="@color/colorPrimary"/>
    </com.zhy.autolayout.AutoRelativeLayout>
    <LinearLayout
        android:id="@+id/linearll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_bg"
        android:layout_marginTop="@dimen/dimen_95_dip">
        <com.rey.material.widget.Button
            android:id="@+id/btn_next"
            style="@style/LightRaiseColorButtonRippleStyle"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dimen_70_dip"
            android:layout_marginRight="@dimen/dimen_70_dip"
            android:text="完成"
            android:textSize="@dimen/contenttitletext"
            />
    </LinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
