<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/pop_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:background="@android:color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="@dimen/mediumtitletext"
            android:text="--请选择操作--" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/onepx"
            android:background="@color/register_line_color" />
        <Button
            android:id="@+id/btn_saveimg"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="@dimen/mediumtitletext"
            android:text="保存图片"
            android:background="@drawable/btn_dialog_bg"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/onepx"
            android:background="@color/register_line_color" />
        <Button
            android:id="@+id/btn_identifysqrcode"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="@dimen/mediumtitletext"
            android:visibility="gone"
            android:text="识别二维码"
            android:background="@drawable/btn_dialog_bg"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/block_weight"
            android:background="@color/qrcodepytype" />
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/cancel"
            android:textSize="@dimen/mediumtitletext"
            android:background="@drawable/btn_dialog_bg"/>
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoRelativeLayout>
