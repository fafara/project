<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<!--我的消息 -->
	<RelativeLayout
		android:id="@+id/rl_dev_use"
		android:layout_width="match_parent"
		android:layout_height="@dimen/dimen_150_dip"
		android:background="@drawable/selector_user_action_bg"
		android:clickable="true"
		>
		<ImageView
			android:id="@+id/iv_dev_use"
			android:layout_width="@dimen/dimen_66_dip"
			android:layout_height="@dimen/dimen_66_dip"
			android:layout_centerVertical="true"
			android:layout_marginLeft="@dimen/dimen_60_dip"
			android:scaleType="centerInside"
			android:src="@drawable/icon_user_device"/>
		<TextView
			android:id="@+id/tv_dev_use"
			style="@style/textViewStyle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_marginLeft="@dimen/dimen_60_dip"
			android:layout_toRightOf="@id/iv_dev_use"
			android:text="@string/tv_user_devuse"/>


		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:layout_alignLeft="@id/tv_dev_use"
			android:layout_alignParentBottom="true"
			android:background="@color/DevideBlock"
			/>
	</RelativeLayout>

	<!--我的消息 -->
	<RelativeLayout
		android:id="@+id/rl_user_message"
		android:layout_width="match_parent"
		android:layout_height="@dimen/dimen_150_dip"
		android:background="@drawable/selector_user_action_bg"
		android:clickable="true"
	>
		<ImageView
			android:id="@+id/iv_user_mymessage"
			android:layout_width="@dimen/dimen_66_dip"
			android:layout_height="@dimen/dimen_66_dip"
			android:layout_centerVertical="true"
			android:layout_marginLeft="@dimen/dimen_60_dip"
			android:scaleType="centerInside"
			android:src="@drawable/icon_user_message"/>
		<TextView
			android:id="@+id/tv_user_mymessage"
			style="@style/textViewStyle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_marginLeft="@dimen/dimen_60_dip"
			android:layout_toRightOf="@id/iv_user_mymessage"
			android:text="@string/tv_user_mymessage"/>

		<ImageView
			android:id="@+id/iv_user_mymessage_jiantou"
			android:layout_width="@dimen/dimen_25_dip"
			android:layout_height="@dimen/dimen_50_dip"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_marginRight="@dimen/dimen_46_dip"
			android:scaleType="centerInside"
			android:visibility="invisible"
			android:src="@drawable/icon_user_jiantou"/>

		<TextView
			android:id="@+id/tv_user_bg_msg_number"
			android:layout_width="19dp"
			android:layout_height="19dp"
			android:layout_alignBottom="@id/iv_user_mymessage_jiantou"
			android:layout_centerVertical="true"
			android:layout_marginRight="@dimen/dimen_26_dip"
			android:layout_toLeftOf="@id/iv_user_mymessage_jiantou"
			android:background="@drawable/icon_user_bg_msg_number"
			android:gravity="center"
			android:textColor="#ffffff"
			android:textSize="@dimen/dimen_28_dip"
			android:visibility="gone"
		/>
		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:layout_alignLeft="@id/tv_user_mymessage"
			android:layout_alignParentBottom="true"
			android:background="@color/DevideBlock"
		/>
	</RelativeLayout>

	<!--用户认证-->
	<RelativeLayout
		android:id="@+id/rl_userauthresult"
		android:layout_width="match_parent"
		android:layout_height="@dimen/dimen_150_dip"
		android:background="@drawable/selector_user_action_bg"
		android:clickable="true"
		android:visibility="gone"
		>
		<ImageView
			android:id="@+id/iv_userauthresult"
			android:layout_width="@dimen/dimen_66_dip"
			android:layout_height="@dimen/dimen_66_dip"
			android:layout_centerVertical="true"
			android:layout_marginLeft="@dimen/dimen_60_dip"
			android:scaleType="centerInside"
			android:src="@drawable/mine_realname"/>
		<TextView
			android:id="@+id/tv_userauthresult"
			style="@style/textViewStyle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_marginLeft="@dimen/dimen_60_dip"
			android:layout_toRightOf="@id/iv_userauthresult"
			android:text="@string/tv_user_realname"/>

		<ImageView
			android:id="@+id/iv_userauthresult_jiantou"
			android:layout_width="@dimen/dimen_25_dip"
			android:layout_height="@dimen/dimen_50_dip"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_marginRight="@dimen/dimen_46_dip"
			android:scaleType="centerInside"
			android:visibility="invisible"
			android:src="@drawable/icon_user_jiantou"/>
		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:layout_alignLeft="@id/tv_userauthresult"
			android:layout_alignParentBottom="true"
			android:background="@color/DevideBlock"
			/>
	</RelativeLayout>

	<!--我的优惠券-->
	<RelativeLayout
		android:id="@+id/rl_user_coupon"
		android:layout_width="match_parent"
		android:layout_height="@dimen/dimen_150_dip"
		android:background="@drawable/selector_user_action_bg"
		android:clickable="true"
		>
		<ImageView
			android:id="@+id/iv_user_coupon"
			android:layout_width="@dimen/dimen_66_dip"
			android:layout_height="@dimen/dimen_66_dip"
			android:layout_centerVertical="true"
			android:layout_marginLeft="@dimen/dimen_60_dip"
			android:scaleType="centerInside"
			android:src="@drawable/setting_coupon"/>
		<TextView
			android:id="@+id/tv_user_coupon"
			style="@style/textViewStyle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_marginLeft="@dimen/dimen_60_dip"
			android:layout_toRightOf="@id/iv_user_coupon"
			android:text="@string/tv_user_coupon"/>

		<ImageView
			android:id="@+id/iv_user_coupon_jiantou"
			android:layout_width="@dimen/dimen_25_dip"
			android:layout_height="@dimen/dimen_50_dip"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_marginRight="@dimen/dimen_46_dip"
			android:scaleType="centerInside"
			android:visibility="invisible"
			android:src="@drawable/icon_user_jiantou"/>
		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:layout_alignLeft="@id/tv_user_coupon"
			android:layout_alignParentBottom="true"
			android:background="@color/DevideBlock"
			/>
	</RelativeLayout>

	<!--我的二维码-->
	<RelativeLayout
		android:id="@+id/rl_user_code"
		android:layout_width="match_parent"
		android:layout_height="@dimen/dimen_150_dip"
		android:background="@drawable/selector_user_action_bg"
		android:clickable="true"
		>
		<ImageView
			android:id="@+id/iv_user_code"
			android:layout_width="@dimen/dimen_66_dip"
			android:layout_height="@dimen/dimen_66_dip"
			android:layout_centerVertical="true"
			android:layout_marginLeft="@dimen/dimen_60_dip"
			android:scaleType="centerInside"
			android:src="@drawable/setting_mycode"/>
		<TextView
			android:id="@+id/tv_user_code"
			style="@style/textViewStyle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_marginLeft="@dimen/dimen_60_dip"
			android:layout_toRightOf="@id/iv_user_code"
			android:text="@string/tv_user_co"/>

		<ImageView
			android:id="@+id/iv_user_code_jiantou"
			android:layout_width="@dimen/dimen_25_dip"
			android:layout_height="@dimen/dimen_50_dip"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_marginRight="@dimen/dimen_46_dip"
			android:scaleType="centerInside"
			android:visibility="invisible"
			android:src="@drawable/icon_user_jiantou"/>
		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:layout_alignLeft="@id/tv_user_code"
			android:layout_alignParentBottom="true"
			android:background="@color/DevideBlock"
			/>
	</RelativeLayout>



	<!--我的客服-->
	<RelativeLayout
		android:id="@+id/rl_user_kefu"
		android:layout_width="match_parent"
		android:layout_height="@dimen/dimen_150_dip"
		android:background="@drawable/selector_user_action_bg"
		android:clickable="true"
	>
		<ImageView
			android:id="@+id/iv_user_kefu"
			android:layout_width="@dimen/dimen_66_dip"
			android:layout_height="@dimen/dimen_66_dip"
			android:layout_centerVertical="true"
			android:layout_marginLeft="@dimen/dimen_60_dip"
			android:scaleType="centerInside"
			android:src="@drawable/icon_user_kefu"/>
		<TextView
			android:id="@+id/tv_user_kefu"
			style="@style/textViewStyle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_marginLeft="@dimen/dimen_60_dip"
			android:layout_toRightOf="@id/iv_user_kefu"
			android:text="@string/tv_user_kefu"/>

		<ImageView
			android:id="@+id/iv_user_kefu_jiantou"
			android:layout_width="@dimen/dimen_25_dip"
			android:layout_height="@dimen/dimen_50_dip"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_marginRight="@dimen/dimen_46_dip"
			android:scaleType="centerInside"
			android:visibility="invisible"
			android:src="@drawable/icon_user_jiantou"/>
		<TextView
			android:id="@+id/tv_user_kefu_phone"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_marginRight="@dimen/dimen_46_dip"
			android:layout_toLeftOf="@id/iv_user_kefu_jiantou"
			android:text="@string/service_phone"
			android:textColor="#999999"
			android:textSize="14sp"
		/>
		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:layout_alignLeft="@id/tv_user_kefu"
			android:layout_alignParentBottom="true"
			android:background="@color/DevideBlock"
		/>
	</RelativeLayout>

	<!--交易明细-->
	<RelativeLayout
		android:id="@+id/rl_user_transfer"
		android:layout_width="match_parent"
		android:layout_height="@dimen/dimen_150_dip"
		android:background="@drawable/selector_user_action_bg"
		android:clickable="true"
		>
		<ImageView
			android:id="@+id/iv_user_transfer"
			android:layout_width="@dimen/dimen_66_dip"
			android:layout_height="@dimen/dimen_66_dip"
			android:layout_centerVertical="true"
			android:layout_marginLeft="@dimen/dimen_60_dip"
			android:scaleType="centerInside"
			android:src="@drawable/icon_user_transfer"/>
		<TextView
			android:id="@+id/tv_user_transfer"
			style="@style/textViewStyle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_marginLeft="@dimen/dimen_60_dip"
			android:layout_toRightOf="@id/iv_user_transfer"
			android:text="@string/tv_user_transfer"/>

		<ImageView
			android:id="@+id/iv_user_transfer_jiantou"
			android:layout_width="@dimen/dimen_25_dip"
			android:layout_height="@dimen/dimen_50_dip"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_marginRight="@dimen/dimen_46_dip"
			android:scaleType="centerInside"
			android:visibility="invisible"
			android:src="@drawable/icon_user_jiantou"/>
		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:layout_alignLeft="@id/tv_user_transfer"
			android:layout_alignParentBottom="true"
			android:background="@color/DevideBlock"
			/>
	</RelativeLayout>
	<!--资金结算-->
	<RelativeLayout
		android:id="@+id/rl_user_withdrawim"
		android:layout_width="match_parent"
		android:layout_height="@dimen/dimen_150_dip"
		android:background="@drawable/selector_user_action_bg"
		android:clickable="true"
		>
		<ImageView
			android:id="@+id/iv_user_withdrawim"
			android:layout_width="@dimen/dimen_66_dip"
			android:layout_height="@dimen/dimen_66_dip"
			android:layout_centerVertical="true"
			android:layout_marginLeft="@dimen/dimen_60_dip"
			android:scaleType="centerInside"
			android:src="@drawable/icon_skin_withdrawim_blue"/>
		<TextView
			android:id="@+id/tv_user_withdrawim"
			style="@style/textViewStyle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_marginLeft="@dimen/dimen_60_dip"
			android:layout_toRightOf="@id/iv_user_withdrawim"
			android:text="资金结算"/>

		<ImageView
			android:id="@+id/iv_user_withdrawim_jiantou"
			android:layout_width="@dimen/dimen_25_dip"
			android:layout_height="@dimen/dimen_50_dip"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_marginRight="@dimen/dimen_46_dip"
			android:scaleType="centerInside"
			android:visibility="invisible"
			android:src="@drawable/icon_user_jiantou"/>
		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:layout_alignLeft="@id/tv_user_withdrawim"
			android:layout_alignParentBottom="true"
			android:background="@color/DevideBlock"
			/>
	</RelativeLayout>

</LinearLayout>