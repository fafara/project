<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:minHeight="60px"
    android:orientation="horizontal" >
<ImageView
    android:id="@+id/bankimgview"
    android:layout_width="60px"
    android:layout_height="60px"
    android:src="@drawable/bank_default"
    android:layout_marginTop="40px"
    android:layout_marginBottom="42px"
    android:layout_marginLeft="30px"
    android:layout_alignParentLeft="true"/>
<TextView
    android:id="@+id/banknametextview"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginTop="45px"
    android:layout_marginLeft="21px"
    android:layout_marginBottom="42px"
    android:layout_toRightOf="@id/bankimgview"
    android:textSize="@dimen/bodytextsize"/>
    <TextView
        android:id="@+id/tv_paybankcards_account"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="45px"
        android:layout_marginLeft="21px"
        android:layout_toRightOf="@id/banknametextview"
        android:layout_marginBottom="42px"
        android:textSize="@dimen/bodytextsize"/>
    <ImageView
        android:id="@+id/tv_checked"
        android:layout_width="50px"
        android:layout_height="50px"
        android:visibility="gone"
       android:layout_marginTop="40px"
        android:src="@drawable/selected"
        android:layout_marginRight="47px"
        android:layout_marginBottom="42px"
        android:layout_alignParentRight="true"/>
</com.zhy.autolayout.AutoRelativeLayout>