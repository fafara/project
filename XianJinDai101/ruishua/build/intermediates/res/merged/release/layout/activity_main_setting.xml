<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical">
	<include layout="@layout/ryxpaytitle"></include>
	<LinearLayout android:layout_width="match_parent"
	              android:layout_height="0dp"
	              android:background="#eef1f3"
	              android:layout_weight="1"
	              android:orientation="vertical">
		<!--我的设备-->
		<RelativeLayout
			android:id="@+id/rl_user_device"
			android:layout_width="match_parent"
			android:layout_height="@dimen/dimen_150_dip"
			android:layout_marginTop="@dimen/dimen_30_dip"
			android:background="@drawable/selector_user_action_bg"
			android:clickable="true"
			>
			<TextView
				android:id="@+id/tv_user_device"
				style="@style/textViewStyle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_marginLeft="@dimen/dimen_40_dip"
				android:text="@string/tv_user_devices"/>

			<ImageView
				android:id="@+id/iv_user_device_jiantou"
				android:layout_width="@dimen/dimen_25_dip"
				android:layout_height="@dimen/dimen_50_dip"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:layout_marginRight="@dimen/dimen_46_dip"
				android:scaleType="centerInside"
				android:src="@drawable/icon_user_jiantou"/>
			<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:layout_alignLeft="@id/tv_user_device"
				android:layout_alignParentBottom="true"
				android:background="@color/DevideBlock"
				/>
		</RelativeLayout>


		<!--账户安全-->
		<RelativeLayout
			android:id="@+id/rl_user_account_safe"
			android:layout_width="match_parent"
			android:layout_height="@dimen/dimen_150_dip"
			android:layout_marginTop="@dimen/dimen_60_dip"
			android:background="@drawable/selector_user_action_bg"
			android:clickable="true"
			>
			<TextView
				android:id="@+id/tv_user_account_safe"
				style="@style/textViewStyle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_marginLeft="@dimen/dimen_40_dip"
				android:text="@string/tv_user_account_safe"/>

			<ImageView
				android:id="@+id/iv_iv_user_account_safe_jiantou"
				android:layout_width="@dimen/dimen_25_dip"
				android:layout_height="@dimen/dimen_50_dip"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:layout_marginRight="@dimen/dimen_46_dip"
				android:scaleType="centerInside"
				android:src="@drawable/icon_user_jiantou"/>
			<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:layout_alignLeft="@id/tv_user_account_safe"
				android:layout_alignParentBottom="true"
				android:background="@color/DevideBlock"
				/>
		</RelativeLayout>
		<!--修改密码 -->
		<RelativeLayout
			android:id="@+id/rl_setting_modify_password"
			android:layout_width="match_parent"
			android:layout_height="@dimen/dimen_147_dip"
			android:background="@drawable/selector_user_action_bg"
			android:clickable="true"
			android:visibility="gone"
		>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_marginLeft="@dimen/dimen_40_dip"
				android:text="@string/tv_setting_modify_password"
				style="@style/textViewStyle"/>

			<ImageView
				android:id="@+id/iv_user_mymessage_jiantou"
				android:layout_width="@dimen/dimen_25_dip"
				android:layout_height="@dimen/dimen_54_dip"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:layout_marginRight="@dimen/dimen_46_dip"
				android:scaleType="centerInside"
				android:src="@drawable/icon_user_jiantou"/>

		</RelativeLayout>
		<View
			android:layout_width="match_parent"
			android:layout_height="1px"
			android:background="#e0e0e0"
		/>
		<!--意见反馈-->
		<RelativeLayout
			android:id="@+id/rl_setting_suggestion"
			android:layout_width="match_parent"
			android:layout_height="@dimen/dimen_147_dip"
			android:layout_marginTop="@dimen/dimen_60_dip"
			android:background="@drawable/selector_user_action_bg"
			android:clickable="true"
		>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_marginLeft="@dimen/dimen_40_dip"
				android:text="@string/tv_setting_suggestion"
				style="@style/textViewStyle"/>

			<ImageView
				android:id="@+id/iv_user_transfer_jiantou"
				android:layout_width="@dimen/dimen_25_dip"
				android:layout_height="@dimen/dimen_54_dip"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:layout_marginRight="@dimen/dimen_46_dip"
				android:scaleType="centerInside"
				android:src="@drawable/icon_user_jiantou"/>
		</RelativeLayout>
		<View
			android:layout_width="match_parent"
			android:layout_height="1px"
			android:layout_marginLeft="@dimen/dimen_40_dip"
			android:background="#e0e0e0"
		/>
		<!--关于我们-->
		<RelativeLayout
			android:id="@+id/rl_setting_about_us"
			android:layout_width="match_parent"
			android:layout_height="@dimen/dimen_147_dip"
			android:background="@drawable/selector_user_action_bg"
			android:clickable="true"
		>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_marginLeft="@dimen/dimen_40_dip"
				android:text="@string/tv_setting_about_us"
				style="@style/textViewStyle"/>

			<ImageView
				android:id="@+id/iv_user_kefu_jiantou"
				android:layout_width="@dimen/dimen_25_dip"
				android:layout_height="@dimen/dimen_54_dip"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:layout_marginRight="@dimen/dimen_46_dip"
				android:scaleType="centerInside"
				android:src="@drawable/icon_user_jiantou"/>
		</RelativeLayout>
		<View
			android:layout_width="match_parent"
			android:layout_height="1px"
			android:layout_marginLeft="@dimen/dimen_40_dip"
			android:background="#e0e0e0"
		/>
		<!--版本信息-->
		<RelativeLayout
			android:id="@+id/rl_setting_version_info"
			android:layout_width="match_parent"
			android:layout_height="@dimen/dimen_147_dip"
			android:background="@drawable/selector_user_action_bg"
			android:clickable="true"
		>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_marginLeft="@dimen/dimen_40_dip"
				android:text="@string/tv_setting_version_info"
				style="@style/textViewStyle"/>

			<ImageView
				android:id="@+id/iv_setting_jiantou"
				android:layout_width="@dimen/dimen_25_dip"
				android:layout_height="@dimen/dimen_54_dip"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:layout_marginRight="@dimen/dimen_46_dip"
				android:scaleType="centerInside"
				android:src="@drawable/icon_user_jiantou"/>

			<TextView
				android:id="@+id/tv_setting_version_tip"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_marginRight="@dimen/dimen_26_dip"
				android:layout_toLeftOf="@id/iv_setting_jiantou"
				android:text="当前最新版本"
				android:textColor="#999999"
				android:textSize="14sp"
			/>
		</RelativeLayout>
		<View
			android:layout_width="match_parent"
			android:layout_height="1px"
			android:background="#e0e0e0"
			android:layout_marginLeft="@dimen/dimen_40_dip"
		/>
		<!--分享-->
		<RelativeLayout
			android:id="@+id/rl_setting_share"
			android:layout_width="match_parent"
			android:layout_height="@dimen/dimen_147_dip"
			android:background="@drawable/selector_user_action_bg"
			android:clickable="true"
		>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_marginLeft="@dimen/dimen_40_dip"
				android:text="@string/tv_setting_share"
				style="@style/textViewStyle"/>

			<ImageView
				android:id="@+id/iv_user_setting_jiantou"
				android:layout_width="@dimen/dimen_25_dip"
				android:layout_height="@dimen/dimen_54_dip"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:layout_marginRight="@dimen/dimen_46_dip"
				android:scaleType="centerInside"
				android:src="@drawable/icon_user_jiantou"/>
		</RelativeLayout>
		<com.rey.material.widget.Button
			android:id="@+id/btn_user_exit"
			style="@style/LightwhiteColorButtonRippleStyle"
			android:layout_width="match_parent"
			android:layout_height="@dimen/dimen_147_dip"
			android:layout_marginTop="@dimen/dimen_60_dip"
			android:gravity="center"
			android:background="#fff"
			android:text="@string/btn_exit"
			android:textColor="@color/secondblack"
			app:rd_leftPadding="0dp"
			app:rd_topPadding="0dp"
			app:rd_rightPadding="0dp"
			app:rd_bottomPadding="0dp"
			android:textSize="14sp"/>
	</LinearLayout>
</LinearLayout>
