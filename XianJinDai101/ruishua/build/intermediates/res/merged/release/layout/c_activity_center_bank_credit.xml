    <!--身份验证码-->
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:background="@drawable/selector_user_action_bg"
        android:clickable="true"
        >
        <TextView
            android:id="@+id/tv_login_authentication"
            style="@style/textViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="40px"
            android:text="身份验证码:"
            android:textSize="12sp"/>
        <EditText
            android:id="@+id/et_tv_login_authentication_input"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="116px"
            android:hint="请输入"
            android:textColorHint="#cccccc"
            android:textCursorDrawable="@null"
            android:background="@null"
            android:textSize="12sp" />

    </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_login_how_get_idcardverification"
            style="@style/textViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:layout_marginBottom="120px"
            android:layout_marginRight="40px"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:text="如何获取身份证验证码? "/>
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <com.rey.material.widget.Button
            android:id="@+id/bt_login_submit"
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:layout_marginLeft="40px"
            android:layout_marginRight="40px"
            android:background="@color/xd_colorPrimaryDark"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="提交"/>
    </com.zhy.autolayout.AutoLinearLayout>
    <CheckBox
        android:id="@+id/cb_login_Agreement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60px"
        android:layout_marginLeft="40px"
        android:checked="true"
        android:text="同意授权瑞扶小贷获取您的征信报告"/>

</com.zhy.autolayout.AutoLinearLayout>
