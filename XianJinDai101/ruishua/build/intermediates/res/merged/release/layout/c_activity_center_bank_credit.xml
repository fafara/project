<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_bg"
    android:orientation="vertical"
    tools:context="com.ryx.ryxcredit.activity.CenterBankCreditActivity">
    <include
        android:id="@+id/c_credit_home_header"
        layout="@layout/c_widget_title"/>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:background="@color/grey_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_login_report"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="授权瑞扶小贷获取你的央行征信报告"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:background="@drawable/selector_user_action_bg"
        android:clickable="true" >
        <TextView
            android:id="@+id/tv_login_loginname"
            style="@style/textViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="40px"
            android:text="登录名:"
            android:textSize="12sp"/>
        <EditText
            android:id="@+id/et_login_loginname_input"
            android:layout_width="0dp"
            android:layout_height="150px"
            android:layout_weight="1"
            android:layout_marginLeft="190px"
            android:drawablePadding="8dp"
            android:hint="请输入"
            android:textColorHint="#cccccc"
            android:textCursorDrawable="@null"
            android:background="@null"
            android:textSize="12sp" />
    </com.zhy.autolayout.AutoLinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e0e0e0"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:background="@drawable/selector_user_action_bg"
        android:clickable="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_login__loginpassword"
            style="@style/textViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="40px"
            android:text="登录密码:"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/et_login_loginpassword_inpput"
            android:layout_width="0dp"
            android:layout_height="150px"
            android:layout_marginLeft="153px"
            android:layout_weight="1"
            android:ems="10"
            android:hint="请输入"
            android:inputType="textPassword"
            android:textColorHint="#cccccc"
            android:textCursorDrawable="@null"
            android:background="@null"
            android:textSize="12sp" />
    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e0e0e0" />

<!--    &lt;!&ndash;图片验证码&ndash;&gt;
