<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/background_f0f3f5"
	android:orientation="vertical">
	<com.zhy.autolayout.AutoLinearLayout
		android:id="@+id/home_main_toplinerlayout"
		android:layout_width="match_parent"
		android:layout_height="450px"
		android:background="@color/blue_main"
	>
		<com.zhy.autolayout.AutoLinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="center"
			android:orientation="horizontal"
		>

			<com.zhy.autolayout.AutoLinearLayout
				android:id="@+id/ll_scan"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:gravity="center_horizontal"
				android:orientation="vertical">

				<ImageView
					android:id="@+id/iv_scan"
					android:layout_width="120px"
					android:layout_height="120px"
					android:scaleType="centerInside"
				/>
				<TextView
					android:id="@+id/tv_scan_title"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="18px"
					android:textColor="#ffffff"
					android:textSize="@dimen/bodytextsize"/>
			</com.zhy.autolayout.AutoLinearLayout>
			<View
				android:id="@+id/v_line_1"
				android:layout_width="1dp"
				android:layout_height="250px"
				android:background="@drawable/gradientbg"
				android:visibility="gone"/>
			<com.zhy.autolayout.AutoLinearLayout
				android:id="@+id/ll_scan_code_payment"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:gravity="center_horizontal"
				android:orientation="vertical">

				<ImageView
					android:id="@+id/iv_orcode_pay"
					android:layout_width="120px"
					android:layout_height="120px"
					android:scaleType="centerInside"
				/>
				<TextView
					android:id="@+id/tv_orcode_pay_title"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="18px"
					android:textColor="#ffffff"
					android:textSize="@dimen/bodytextsize"/>
			</com.zhy.autolayout.AutoLinearLayout>
			<View
				android:id="@+id/v_line_2"
				android:layout_width="1dp"
				android:layout_height="250px"
				android:background="@drawable/gradientbg"
				android:visibility="gone"/>
			<com.zhy.autolayout.AutoLinearLayout
				android:id="@+id/ll_payment"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:gravity="center_horizontal"
				android:orientation="vertical">

				<ImageView
					android:id="@+id/iv_payment"
					android:layout_width="120px"
					android:layout_height="120px"
					android:scaleType="centerInside"
				/>
				<TextView
					android:id="@+id/tv_payment"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="18px"
					android:textColor="#ffffff"
					android:textSize="@dimen/bodytextsize"/>
			</com.zhy.autolayout.AutoLinearLayout>
		</com.zhy.autolayout.AutoLinearLayout>
	</com.zhy.autolayout.AutoLinearLayout>
	<com.zhy.autolayout.AutoLinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">
		<com.jcodecraeer.xrecyclerview.XRecyclerView
			android:id="@+id/gv_bottom"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:descendantFocusability="blocksDescendants"
			/>
	</com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>

