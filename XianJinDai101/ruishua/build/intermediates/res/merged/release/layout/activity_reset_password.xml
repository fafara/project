<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<include layout="@layout/ryxpaytitle"></include>
	<android.support.v4.widget.NestedScrollView
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="@dimen/dimen_85_dip"
			android:orientation="vertical">
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:orientation="vertical"
			>

				<com.zhy.autolayout.AutoLinearLayout
					android:id="@+id/devtypeallyout"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:visibility="gone">
					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="请选择您的设备类型"
						android:textSize="@dimen/bodylittletextsize"/>
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="1px"
						android:layout_marginTop="20px"
						android:background="@color/login_edt_lostfocus"
						android:orientation="horizontal"/>
					<com.zhy.autolayout.AutoRelativeLayout
						android:id="@+id/devtypearl"
						android:layout_width="match_parent"
						android:layout_height="100px"
						android:layout_marginBottom="30px"
						android:layout_marginTop="30px">
						<ImageView
							android:id="@+id/devtypeiv"
							android:layout_width="100px"
							android:layout_height="100px"
							android:layout_alignParentLeft="true"
							android:src="@drawable/bank_abc"/>
						<TextView
							android:id="@+id/mBranchNametv"
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:layout_marginLeft="50px"
							android:layout_toRightOf="@id/devtypeiv"
							android:gravity="center_vertical"
							android:textSize="@dimen/bodytextsize"
						/>
						<ImageView
							android:id="@+id/devtypeImg"
							android:layout_width="100px"
							android:layout_height="100px"
							android:layout_alignParentLeft="true"/>
						<ImageView
							android:layout_width="60px"
							android:layout_height="60px"
							android:layout_alignParentRight="true"
							android:layout_centerVertical="true"
							android:src="@drawable/righttocontent"/>

					</com.zhy.autolayout.AutoRelativeLayout>
				</com.zhy.autolayout.AutoLinearLayout>
				<LinearLayout
					android:id="@+id/linelineyout"
					android:layout_width="match_parent"
					android:layout_height="1px"
					android:layout_marginBottom="@dimen/dimen_80_dip"
					android:background="@color/login_edt_lostfocus"
					android:orientation="horizontal"
					android:visibility="gone"/>

				<EditText
					android:id="@+id/et_phonenumber"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="@null"
					android:hint="请输入手机号"
					android:inputType="number"
					android:maxLength="11"
					android:padding="5dp"
					android:textColorHint="#cccccc"
					android:textSize="15sp"
				/>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/ll_phonenumber"
				android:layout_width="match_parent"
				android:layout_height="1px"
				android:background="@color/login_edt_lostfocus"
				android:orientation="horizontal"/>

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/dimen_80_dip"
				android:gravity="center"
				android:orientation="horizontal"
				>
				<EditText
					android:id="@+id/et_mac"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="@null"
					android:hint="请输入验证码"
					android:inputType="number"
					android:maxLength="4"
					android:padding="5dp"
					android:textColorHint="#cccccc"
					android:textSize="15sp"
					/>
				<TextView
					android:id="@+id/tv_again_mac"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:layout_centerVertical="true"
					android:text="获取验证码"
					android:textColor="@color/colorPrimary"
					android:textSize="14sp"
					/>
			</RelativeLayout>

			<LinearLayout
				android:id="@+id/ll_mac"
				android:layout_width="match_parent"
				android:layout_height="1px"
				android:background="@color/login_edt_getfocus"
				android:orientation="horizontal"/>

			<EditText
				android:id="@+id/et_username"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/dimen_80_dip"
				android:background="@null"
				android:ems="10"
				android:hint="请输入姓名"
				android:inputType="text"
				android:maxLength="16"
				android:padding="5dp"
				android:textColorHint="#cccccc"
				android:textSize="15sp"
			/>
			<LinearLayout
				android:id="@+id/ll_username"
				android:layout_width="match_parent"
				android:layout_height="1px"
				android:background="@color/login_edt_getfocus"
				android:orientation="horizontal"/>
			<EditText
				android:id="@+id/et_identification_card"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/dimen_80_dip"
				android:background="@null"
				android:digits="0123456789x"
				android:hint="请输入身份证号"
				android:inputType="textVisiblePassword"
				android:maxLength="18"
				android:padding="5dp"
				android:textColorHint="#cccccc"
				android:textSize="15sp"
			/>
			<LinearLayout
				android:id="@+id/ll_identification_card"
				android:layout_width="match_parent"
				android:layout_height="1px"
				android:background="@color/login_edt_getfocus"
				android:orientation="horizontal"/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="100px"
				android:textColor="@color/blue"
				android:text="温馨提示:\n     已实名认证用户请正确填写姓名和身份证号,如未实名认证用户,无需填写这两项."/>
			<com.rey.material.widget.Button
				android:id="@+id/btn_reset_next"
				style="@style/LightRaiseColorButtonRippleStyle"
				android:layout_width="match_parent"
				android:layout_marginTop="@dimen/dimen_80_dip"
				android:gravity="center"
				android:text="@string/btn_next"
				android:textColor="#ffffff"
				android:textSize="@dimen/contenttitletext"
			/>
		</LinearLayout>
	</android.support.v4.widget.NestedScrollView>
</LinearLayout>