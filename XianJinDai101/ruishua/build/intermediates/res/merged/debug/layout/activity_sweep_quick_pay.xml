<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#fff"
    android:orientation="vertical"
    android:baselineAligned="false">
    <include layout="@layout/ryxpaytitle"
        android:layout_width="match_parent"
        android:layout_height="56dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarThumbVertical="@color/white"
        android:scrollbars="vertical">
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="126px"
        android:orientation="horizontal"
        android:layout_marginTop="80px">
        <TextView
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_gravity="left|center_vertical"
            android:gravity="left|center_vertical"
            android:layout_weight="1"
            android:layout_marginLeft="70px"
            android:textSize="@dimen/bodytextsize"
            android:text="收款人:"
            android:textColor="@color/secondblack"
            />
        <TextView
            android:id="@+id/payee_phoneid"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_gravity="left|center_vertical"
            android:gravity="left|center_vertical"
            android:layout_weight="4"
            android:textSize="@dimen/bodytextsize"
            android:textColor="@color/secondblack"
            />
        <TextView
            android:id="@+id/payee_nameid"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:textSize="@dimen/bodytextsize"
            android:layout_marginRight="47px"
            android:textColor="@color/secondblack"
            />
    </com.zhy.autolayout.AutoLinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/onepx"
        android:layout_marginLeft="70px"
        android:layout_marginRight="47px"
        android:background="@color/payhorizontalline" />
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_height="230px"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@color/white"
            >
            <TextView
                android:layout_marginLeft="70px"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textSize="32sp"
                android:gravity="center"
                android:text="¥"/>
            <EditText
                android:id="@+id/quick_pay_paymoney"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="24sp"
                android:layout_marginLeft="40px"
                android:layout_gravity="center_vertical"
                android:hint="0.00"
                android:background="@null"
                android:digits = "0123456789."
                android:inputType="numberDecimal"
                android:maxLength="9"
                android:textColor="@color/secondblack"
                android:focusable="true"
                android:textColorHint="@color/fourblack"
                android:focusableInTouchMode="true"
                />

        </com.zhy.autolayout.AutoLinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/smallersize"
            android:textColor="@color/warning_icon_ff7a6b"
            android:layout_marginLeft="70px"
            android:gravity="top"
            android:text="注意:您正在向别人付款，付款前请确认对方身份"/>
    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/onepx"
        android:layout_marginLeft="70px"
        android:layout_marginRight="47px"
        android:background="@color/payhorizontalline" />
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/quick_pay_selectbankid"
        android:layout_height="180px"
        android:layout_width="match_parent"
        android:layout_marginLeft="70px"
        android:visibility="gone"
        orientation="horizontal">
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_height="0px"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/quickpay_bankimg"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_gravity="bottom"/>
                <TextView
                    android:id="@+id/quickpay_bankname"
                    android:layout_marginLeft="21px"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:textSize="@dimen/bodytextsize"/>

            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_height="0px"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_marginTop="20px"
                android:layout_marginBottom="20px"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/quickpay_accountno"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/bodytextsize"/>

            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            >
            <ImageView
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_marginRight="47px"
                android:layout_gravity="center_vertical"
                android:src="@drawable/righttocontent"/>

        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoRelativeLayout>
    <View
        android:id="@+id/banklistviewLine"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/onepx"
        android:layout_marginLeft="70px"
        android:layout_marginRight="47px"
        android:visibility="gone"
        android:background="@color/payhorizontalline" />
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="150px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="安全密码:"
            android:textSize="@dimen/bodytextsize"
            android:gravity="center_vertical"
            android:layout_marginLeft="70px"/>
        <EditText
            android:id="@+id/quick_edit_loginpasw"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/contenttitletext"
            android:hint="请输入登录安全密码"
            android:background="@null"
            android:inputType="number"
            android:maxLength="11"
            android:ems="11"
            android:textColor="@color/secondblack"
            android:focusable="true"
            android:textColorHint="@color/fourblack"
            android:focusableInTouchMode="true"
            android:paddingLeft="20px"
            />
    </com.zhy.autolayout.AutoLinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/onepx"
        android:layout_marginLeft="70px"
        android:layout_marginRight="47px"
        android:background="@color/payhorizontalline" />
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:visibility="gone"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="手机号:"
            android:textSize="@dimen/bodytextsize"
          android:gravity="center_vertical"
            android:layout_marginLeft="70px"/>
        <EditText
            android:id="@+id/quick_pay_myphonenumberid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/contenttitletext"
            android:hint="请输入付款人手机号"
            android:background="@null"
            android:inputType="number"
            android:maxLength="11"
            android:ems="11"
            android:textColor="@color/secondblack"
            android:focusable="true"
            android:textColorHint="@color/fourblack"
            android:focusableInTouchMode="true"
            android:paddingLeft="20px"
            />


    </com.zhy.autolayout.AutoLinearLayout>
    <View
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="@dimen/onepx"
        android:layout_marginLeft="70px"
        android:layout_marginRight="47px"
        android:background="@color/payhorizontalline" />
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_height="150px"
        android:visibility="gone"
        android:layout_width="match_parent">

        <EditText
            android:id="@+id/quick_pay_verificationcode"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:textSize="@dimen/contenttitletext"
            android:hint="请输入验证码"
            android:background="@null"
            android:inputType="number"
            android:maxLength="4"
            android:textColor="@color/secondblack"
            android:layout_marginLeft="70px"
            android:layout_weight="2"
            android:focusable="true"
            android:textColorHint="@color/fourblack"
            android:focusableInTouchMode="true"
            />

        <TextView
            android:id="@+id/quick_btn_sendmsg"
            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:text="发送验证码"
            android:gravity="center_vertical|right"
            android:layout_marginRight="47px"
            android:textColor="@color/blue"
            android:textSize="@dimen/bodytextsize"/>
    </com.zhy.autolayout.AutoLinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/onepx"
        android:layout_marginLeft="70px"
        android:layout_marginRight="47px"
        android:background="@color/payhorizontalline" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="100px"
        android:layout_marginLeft="70px"
        android:layout_marginRight="70px"
        android:layout_height="wrap_content">
        <com.rey.material.widget.Button
            android:id="@+id/quick_btn_ok"
            style="@style/LightRaiseColorButtonRippleStyle"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textSize="@dimen/contenttitletext"
            android:text="下一步"/>

    </LinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
    </ScrollView>
</com.zhy.autolayout.AutoLinearLayout>
