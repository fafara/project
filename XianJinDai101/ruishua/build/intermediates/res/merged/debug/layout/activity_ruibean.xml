<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/GridBG"
    android:orientation="vertical">
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/ryxpaytitlelyout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/blue"
        android:fitsSystemWindows="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/tileleftImg"
            android:layout_width="110px"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"
            android:focusable="false"
            android:src="@drawable/ryxtitlebackbg"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="#fff"
            android:textSize="@dimen/maxtextsize"/>
        <ImageView
            android:id="@+id/tilerightImg"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_marginRight="30px"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:focusable="false"
            android:src="@drawable/myorderlist"
            />
    </com.zhy.autolayout.AutoRelativeLayout>
<com.zhy.autolayout.AutoLinearLayout
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90px"
        android:textSize="@dimen/leasttextsize"
        android:textColor="@color/secondblack"
        android:text="当前可用瑞豆"/>
    <!--<TextView
        android:id="@+id/ruibean_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45px"
        android:textColor="@color/blue"
        android:layout_marginBottom="108px"
        android:textSize="@dimen/textsize_36"/>-->
    <com.ryx.payment.ruishua.widget.CMoneyTextView
        android:id="@+id/ruibean_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45px"
        android:layout_gravity="center_horizontal"
        android:text="0"
        android:layout_marginBottom="108px"
        android:textColor="@color/blue"
        android:textSize="@dimen/textsize_36" />
</com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="30px"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginBottom="1px"
            android:text="购买瑞豆"/>
<View
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:background="@color/GridBG"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/ruibeans_rcv"
            android:layout_marginTop="40px"
            android:layout_marginLeft="40px"
            android:layout_marginBottom="150px"
            android:layout_marginRight="40px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/agreement_layout"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:gravity="center">

        <TextView
            android:id="@+id/ruidoutext_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/bodylittletextsize"
            android:textColor="@color/blue"
            android:text="《瑞豆使用说明》"/>


    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoRelativeLayout>