<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="320px">
    <TextView
        android:id="@+id/order_money"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="@dimen/maxtitletext"
        android:textColor="@color/drakblack"
        android:text=""/>
        </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="27px"
        android:background="@color/orderbackground" />
<com.zhy.autolayout.AutoLinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
<com.zhy.autolayout.AutoRelativeLayout
    android:id="@+id/layout1"
    android:layout_height="126px"
    android:layout_marginLeft="70px"
    android:layout_width="match_parent"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:textSize="@dimen/bodytextsize"
        android:textColor="@color/drakblack"
        android:text="订单号"
        android:id="@+id/tv11" />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_alignParentRight="true"
    android:textSize="@dimen/bodytextsize"
    android:text=""
    android:textColor="@color/drakblack"
    android:layout_marginRight="47px"
    android:id="@+id/tv12" />
</com.zhy.autolayout.AutoRelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/onepx"
        android:layout_marginLeft="70px"
        android:background="@color/payhorizontalline" />


    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/layout2"
        android:layout_height="126px"
        android:layout_marginLeft="70px"
        android:layout_width="match_parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:textSize="@dimen/bodytextsize"
            android:textColor="@color/drakblack"
            android:text="收款说明"
            android:id="@+id/tv21" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/bodytextsize"
            android:text=""
            android:textColor="@color/drakblack"
            android:layout_marginRight="47px"
            android:id="@+id/tv22" />
    </com.zhy.autolayout.AutoRelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/onepx"
        android:layout_marginLeft="70px"
        android:background="@color/payhorizontalline" />


    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/layout3"
        android:layout_height="126px"
        android:layout_marginLeft="70px"
        android:layout_width="match_parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:textSize="@dimen/bodytextsize"
            android:textColor="@color/drakblack"
            android:text="商户名称"
            android:id="@+id/tv31" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/bodytextsize"
            android:text=""
            android:textColor="@color/drakblack"
            android:layout_marginRight="47px"
            android:id="@+id/tv32" />
    </com.zhy.autolayout.AutoRelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/onepx"
        android:layout_marginLeft="70px"
        android:background="@color/payhorizontalline" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/layout4"
        android:layout_height="126px"
        android:layout_marginLeft="70px"
        android:layout_width="match_parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:textSize="@dimen/bodytextsize"
            android:textColor="@color/drakblack"
            android:text="收款账户"
            android:id="@+id/tv41" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/bodytextsize"
            android:text=""
            android:textColor="@color/drakblack"
            android:layout_marginRight="47px"
            android:id="@+id/tv42" />
    </com.zhy.autolayout.AutoRelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/onepx"
        android:layout_marginLeft="70px"
        android:background="@color/payhorizontalline" />
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/layout5"
        android:layout_height="126px"
        android:layout_marginLeft="70px"
        android:layout_width="match_parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:textSize="@dimen/bodytextsize"
            android:textColor="@color/drakblack"
            android:text="51"
            android:id="@+id/tv51" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/bodytextsize"
            android:text=""
            android:textColor="@color/drakblack"
            android:layout_marginRight="47px"
            android:id="@+id/tv52" />
    </com.zhy.autolayout.AutoRelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/onepx"
        android:layout_marginLeft="70px"
        android:background="@color/payhorizontalline" />


    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/layout6"
        android:layout_height="150px"
        android:layout_marginLeft="70px"
        android:layout_width="match_parent"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:textSize="@dimen/bodytextsize"
            android:textColor="@color/drakblack"
            android:text="51"
            android:id="@+id/tv61" />
        <EditText
            android:id="@+id/edt_cvn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           android:gravity="right|center"
            android:layout_toRightOf="@id/tv61"
            android:background="@null"
            android:layout_marginLeft="100px"
            android:cursorVisible="true"
            android:hint="请输入安全交易密码"
            android:inputType="number"
            android:layout_marginRight="47px"
            android:maxLength="6"
            android:textColor="@android:color/black"
            android:textColorHint="#cccccc"
            android:textSize="@dimen/bodytextsize"/>
    </com.zhy.autolayout.AutoRelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/onepx"
        android:layout_marginLeft="70px"
        android:background="@color/payhorizontalline" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="96px"
        android:layout_marginLeft="70px"
        android:layout_marginRight="70px"
        android:layout_height="150px">
        <com.rey.material.widget.Button
            android:id="@+id/bt_next"
            style="@style/LightRaiseColorButtonRippleStyle"
            android:layout_width="match_parent"
            android:textSize="@dimen/contenttitletext"
            android:text="下一步"/>
    </LinearLayout>

</com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>