<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/selector_user_action_bg"
    android:layout_height="180px">
<com.zhy.autolayout.AutoLinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">
<TextView
    android:id="@+id/type_coupons_tv"
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:gravity="center"
    android:textSize="@dimen/bodytextsize"
    android:textColor="@color/black"/>
<TextView
    android:id="@+id/content_coupons_tv"
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:gravity="center"
    android:textSize="@dimen/leasttextsize"
    android:textColor="@color/threeblack"
    android:text="满1000可用;30天内有效"/>

</com.zhy.autolayout.AutoLinearLayout>
