<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@android:color/white"
	android:orientation="vertical">
	<include layout="@layout/ryxpaytitle"/>
	<com.baoyz.swipemenulistview.SwipeMenuListView
		android:id="@+id/lv_show_bank"
		android:layout_width="match_parent"
		android:layout_height="200px"
		android:layout_marginLeft="70px"
		android:layout_marginRight="70px"
		android:layout_marginTop="60px"
		android:divider="@null"
		android:dividerHeight="32px"
	/>

	<com.zhy.autolayout.AutoLinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="70px"
		android:layout_marginRight="70px"
		android:layout_marginTop="100px"
		android:orientation="vertical">
		<com.zhy.autolayout.AutoRelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:orientation="horizontal"
		>
			<EditText
				android:id="@+id/et_withdraw_balance"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@null"
				android:focusable="true"
				android:focusableInTouchMode="true"
				android:hint="请输入提款金额"
				android:digits = "0123456789."
				android:inputType="textVisiblePassword"
				android:maxLength="15"
				android:paddingBottom="10px"
				android:paddingLeft="20px"
				android:textColor="@color/secondblack"
				android:textColorHint="@color/fourblack"
				android:textSize="@dimen/contenttitletext"
			/>
			<TextView
				android:id="@+id/tv_withdraw_all"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:text="全部提取"
				android:textColor="@color/colorPrimary"
				android:textSize="14sp"
			/>
		</com.zhy.autolayout.AutoRelativeLayout>
		<com.zhy.autolayout.AutoLinearLayout
			android:id="@+id/ll_withdraw_balance"
			android:layout_width="match_parent"
			android:layout_height="1px"
			android:layout_marginTop="20px"
			android:background="@color/login_edt_lostfocus"
			android:orientation="horizontal"/>
		<EditText
			android:id="@+id/et_withdraw_pwd"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="70px"
			android:background="@null"
			android:singleLine="true"
			android:cursorVisible="true"
			android:ems="10"
			android:hint="请输入交易密码"
			android:inputType="textPassword"
			android:paddingBottom="10px"
			android:paddingLeft="20px"
			android:textColorHint="#cccccc"
			android:textCursorDrawable="@null"
			android:textSize="14sp"
		/>
		<com.zhy.autolayout.AutoLinearLayout
			android:id="@+id/ll_withdraw_pwd"
			android:layout_width="match_parent"
			android:layout_height="1px"
			android:layout_marginTop="20px"
			android:background="@color/login_edt_lostfocus"
			android:orientation="horizontal"/>

		<com.zhy.autolayout.AutoRelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="70px"
			android:gravity="center"
			android:visibility="gone"
			android:orientation="horizontal"
		>
			<EditText
				android:id="@+id/et_mac"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@null"
				android:hint="请输入验证码"
				android:inputType="number"
				android:paddingBottom="10px"
				android:paddingLeft="20px"
				android:maxLength="4"
				android:textColorHint="#cccccc"
				android:textSize="14sp"
			/>
			<TextView
				android:id="@+id/tv_again_mac"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:text="获取验证码"
				android:textColor="@color/colorPrimary"
				android:textSize="14sp"
			/>
		</com.zhy.autolayout.AutoRelativeLayout>
		<com.zhy.autolayout.AutoLinearLayout
			android:id="@+id/ll_withdraw_mac"
			android:layout_width="match_parent"
			android:layout_height="1px"
			android:layout_marginTop="20px"
			android:visibility="gone"
			android:background="@color/login_edt_lostfocus"
			android:orientation="horizontal"/>
		<com.zhy.autolayout.AutoLinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10px"
			android:orientation="vertical">
			<TextView
				android:id="@+id/tv_tip_balance"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/tv_withdraw_tips"
				android:textSize="12sp"
				android:visibility="gone"
			/>
			<TextView
				android:id="@+id/warmprompt_tv"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="10px"
				android:textSize="14sp"/>
		</com.zhy.autolayout.AutoLinearLayout>

		<com.zhy.autolayout.AutoLinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="80px"
			android:visibility="gone"
			android:orientation="horizontal">

			<LinearLayout
				android:id="@+id/ll_action_immediate"
				android:layout_width="350px"
				android:layout_height="210px"
				android:background="@drawable/c_repayment_type_bg"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="vertical">

				<com.rey.material.widget.TextView
					android:id="@+id/tv_immediate"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="快速到账"
					android:textSize="16sp"/>

				<com.rey.material.widget.TextView
					android:id="@+id/tv_immediate_tip"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="5dp"
					android:text="(两小时内到账)"
					android:textSize="12sp"/>
			</LinearLayout>

			<com.zhy.autolayout.AutoLinearLayout
				android:id="@+id/ll_action_normal"
				android:layout_width="350px"
				android:layout_height="210px"
				android:background="@drawable/c_repayment_type_bg"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="vertical">

				<com.rey.material.widget.TextView
					android:id="@+id/tv_normal"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="普通到账"
					android:textSize="16sp"/>

				<com.rey.material.widget.TextView
					android:id="@+id/tv_normal_tip"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="5dp"
					android:text="(第二个工作日到账)"
					android:textSize="12sp"/>

			</com.zhy.autolayout.AutoLinearLayout>
		</com.zhy.autolayout.AutoLinearLayout>
		<com.zhy.autolayout.AutoLinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="80px">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<com.rey.material.widget.Button
					android:id="@+id/btn_true"
					style="@style/LightRaiseColorButtonRippleStyle"
					android:layout_width="match_parent"
					android:gravity="center"
					android:text="确认提款"
					android:textSize="@dimen/contenttitletext"/>
			</LinearLayout>
		</com.zhy.autolayout.AutoLinearLayout>
	</com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
