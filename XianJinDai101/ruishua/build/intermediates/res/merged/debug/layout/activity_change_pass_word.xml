<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<include layout="@layout/ryxpaytitle"></include>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="@dimen/dimen_80_dip"
		android:layout_marginTop="@dimen/dimen_50_dip"
		android:orientation="vertical">
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:orientation="horizontal"
		>
			<EditText
				android:id="@+id/et_old_password"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="65dp"
				android:padding="5dp"
				android:background="@null"
				android:hint="请输入原密码"
				android:inputType="textPassword"
				android:maxLength="20"
				android:textColorHint="#cccccc"
				android:textSize="15sp"
			/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:text="原密码"
				android:textSize="17sp"/>
			<ImageView
				android:id="@+id/iv_show_old_pwd_status"
				android:layout_width="@dimen/dimen_70_dip"
				android:layout_height="@dimen/dimen_35_dip"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:layout_marginTop="6dp"
				android:scaleType="centerInside"
				android:src="@drawable/icon_user_eye_close"
			/>
		</RelativeLayout>
		<LinearLayout
			android:id="@+id/ll_old_pwd_line"
			android:layout_width="match_parent"
			android:layout_height="1px"
			android:background="@color/login_edt_getfocus"
			android:orientation="horizontal"/>
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/dimen_80_dip"
			android:gravity="center"
			android:orientation="horizontal"
		>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:text="新密码"
				android:textSize="17sp"/>
			<EditText
				android:id="@+id/et_new_password"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="65dp"
				android:padding="5dp"
				android:background="@null"
				android:hint="请重新设置密码"
				android:inputType="textPassword"
				android:maxLength="20"
				android:textColorHint="#cccccc"
				android:textSize="15sp"
			/>

			<ImageView
				android:id="@+id/iv_show_new_pwd_status"
				android:layout_width="@dimen/dimen_70_dip"
				android:layout_height="@dimen/dimen_35_dip"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:layout_marginTop="6dp"
				android:scaleType="centerInside"
				android:src="@drawable/icon_user_eye_close"
			/>
		</RelativeLayout>
		<LinearLayout
			android:id="@+id/ll_new_pwd_line"
			android:layout_width="match_parent"
			android:layout_height="1px"
			android:background="@color/login_edt_getfocus"
			android:orientation="horizontal"/>
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/dimen_80_dip"
			android:gravity="center"
			android:orientation="horizontal"
		>
			<EditText
				android:id="@+id/et_mac"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@null"
				android:hint="请输入验证码"
				android:inputType="number"
				android:maxLength="4"
				android:padding="5dp"
				android:textColorHint="#cccccc"
				android:textSize="15sp"
			/>
			<TextView
				android:id="@+id/tv_again_mac"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:text="获取验证码"
				android:textColor="@color/colorPrimary"
				android:textSize="14sp"
			/>
		</RelativeLayout>
		<LinearLayout
			android:id="@+id/ll_mac_line"
			android:layout_width="match_parent"
			android:layout_height="1px"
			android:background="@color/login_edt_getfocus"
			android:orientation="horizontal"/>
		<com.rey.material.widget.Button
			android:id="@+id/btn_save_pwd"
			style="@style/LightRaiseColorButtonRippleStyle"
			android:layout_width="match_parent"
			android:layout_marginTop="@dimen/dimen_80_dip"
			android:gravity="center"
			android:text="@string/btn_save_pwd"
			android:textSize="@dimen/contenttitletext"
		/>
	</LinearLayout>
</LinearLayout>