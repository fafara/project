<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/selector_user_action_bg"
    android:layout_height="200px">
    <ImageView
        android:id="@+id/incomguide_img"
        android:layout_width="80px"
        android:layout_height="80px"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20px"
        />
        <TextView
            android:id="@+id/tv_explaintext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/incomguide_img"
            android:layout_marginLeft="@dimen/dimen_20_dip"
            style="@style/textViewStyle"/>
        <ImageView
            android:layout_width="@dimen/dimen_25_dip"
            android:layout_height="@dimen/dimen_54_dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_46_dip"
            android:scaleType="centerInside"
            android:src="@drawable/icon_user_jiantou"/>
    </com.zhy.autolayout.AutoRelativeLayout>
