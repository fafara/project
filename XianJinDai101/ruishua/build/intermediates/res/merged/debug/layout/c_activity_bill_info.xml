<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey_bg"
    tools:context="com.ryx.ryxcredit.activity.BillInfoActivity">
    <include
        android:id="@+id/c_credit_home_header"
        layout="@layout/c_widget_title"></include>

    <com.zhy.autolayout.AutoLinearLayout
        android:background="@drawable/whiteroundshape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="90px"
        android:layout_marginRight="90px"
        android:layout_marginTop="60px"
        >
        <ImageView
            android:id="@+id/c_iv_bank_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/bank_default"
            android:layout_marginLeft="50px"
            android:layout_gravity="center_vertical"
            />
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="50px"
            android:layout_marginBottom="39px"
            android:layout_marginTop="42px"
            >
            <TextView
                android:id="@+id/c_tv_bank_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/commontextsize"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/c_bank_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/bodylittletextsize"
                android:textColor="@color/threeblack"
                />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
    <View
        style="@style/BlackHorizontalLine"/>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="60px"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="54px"
            android:layout_marginBottom="54px"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="@dimen/commontextsize"
            android:text="信用卡账单信息"
            />
        <View
         style="@style/BlackHorizontalLine"/>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="54px"
            android:layout_marginBottom="54px"
            android:layout_marginLeft="60px"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/secondblack"
                android:textSize="@dimen/commontextsize"
                android:text="总额度"
                />
            <EditText
                android:id="@+id/c_et_total_amount"
                android:layout_marginLeft="100px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:maxLines="1"
                android:inputType="numberDecimal"
                android:maxLength="7"
                android:textColor="@color/black"
                android:textColorHint="@color/threeblack"
                android:textSize="@dimen/commontextsize"
                android:hint="本张信用卡额度"
                />
        </com.zhy.autolayout.AutoLinearLayout>
        <View
            style="@style/BlackHorizontalLine"/>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="54px"
            android:layout_marginBottom="54px"
            android:layout_marginLeft="60px"
            >
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/secondblack"
                android:textSize="@dimen/commontextsize"
                android:text="账单金额"
                />
            <EditText
                android:id="@+id/c_et_current_balance"
                android:layout_marginLeft="60px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:maxLines="1"
                android:maxLength="10"
                android:inputType="numberDecimal"
                android:textSize="@dimen/commontextsize"
                android:textColorHint="@color/threeblack"
                android:hint="当期已出账单金额"
                />
        </com.zhy.autolayout.AutoLinearLayout>
        <View
            style="@style/BlackHorizontalLine"/>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="54px"
            android:layout_marginBottom="54px"
            android:layout_marginLeft="60px"
            >
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/secondblack"
                android:textSize="@dimen/commontextsize"
                android:text="账单日"
                />
            <TextView
                android:id="@+id/c_tv_statement_date"
                android:layout_marginLeft="100px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textColorHint="@color/threeblack"
                android:textSize="@dimen/commontextsize"
                android:hint="每月出账单的日期"
                />
        </com.zhy.autolayout.AutoLinearLayout>
        <View
            style="@style/BlackHorizontalLine"/>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="54px"
            android:layout_marginBottom="54px"
            android:layout_marginLeft="60px"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/secondblack"
                android:textSize="@dimen/commontextsize"
                android:text="还款日"
                />
            <TextView
                android:id="@+id/c_tv_pament_due_date"
                android:layout_marginLeft="100px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/threeblack"
                android:textSize="@dimen/commontextsize"
                android:textColor="@color/black"
                android:hint="每月最迟还款日期"
                />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>

    <com.rey.material.widget.Button
        android:id="@+id/c_borrow_money_btn"
        style="@style/CLightRaiseColorButtonRippleStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="90px"
        android:text="完成"
        android:textSize="@dimen/commontextsize" />
</com.zhy.autolayout.AutoLinearLayout>
