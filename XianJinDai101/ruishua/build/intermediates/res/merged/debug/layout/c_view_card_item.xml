<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
    >
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
       <ImageView
            android:id="@+id/img_bank"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="60px"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:id="@+id/tv_cardNo"
            android:layout_marginLeft="60px"
            android:layout_marginTop="54px"
            android:layout_marginBottom="54px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/bodytextsize"
            android:textColor="@color/black"
            />

    </com.zhy.autolayout.AutoLinearLayout>
    <TextView
        android:id="@+id/tv_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/bodylittletextsize"
        android:textColor="@color/threeblack"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:text="点击添加"
        />
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="right"
        >
        <TextView
            android:id="@+id/tv_cardtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/bodylittletextsize"
            android:textColor="@color/threeblack"
            android:layout_toLeftOf="@+id/tv_finish"
            android:layout_marginRight="90px"
            />
        <TextView
            android:id="@+id/tv_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/bodylittletextsize"
            android:textColor="@color/threeblack"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/img_right2"
            android:layout_marginRight="30px"
            android:text="点击去完善"
            />
        <ImageView
            android:id="@+id/img_right"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:visibility="gone"
            android:layout_toLeftOf="@+id/img_right2"
            android:layout_centerVertical="true"
            android:layout_marginRight="10px"
            android:src="@drawable/right_img" />
        <ImageView
            android:id="@+id/img_right2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/c_icon_jiantou_right"
            android:layout_marginLeft="30px"
            android:layout_marginRight="40px"
            android:layout_centerVertical="true"
            />
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoRelativeLayout>