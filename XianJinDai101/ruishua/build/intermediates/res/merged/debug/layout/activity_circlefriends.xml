<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/activity_bg">
    <include layout="@layout/ryxpaytitle"/>
<com.zhy.autolayout.AutoRelativeLayout
    android:layout_width="match_parent"
    android:layout_height="180px"
    android:background="@color/white">
<ImageView
    android:id="@+id/circlefriend_imgview1"
    android:layout_width="80px"
    android:layout_height="80px"
    android:layout_alignParentLeft="true"
    android:layout_marginLeft="40px"
    android:layout_centerVertical="true"
    />

    <TextView
        android:id="@+id/circlefriend_text11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="40px"
        android:textColor="@color/secondblack"
        android:textSize="@dimen/bodytextsize"
        android:layout_toRightOf="@id/circlefriend_imgview1"/>

    <TextView
        android:id="@+id/circlefriend_text12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="@color/secondblack"
        android:textSize="@dimen/bodytextsize"
        android:layout_marginRight="40px"/>

</com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:background="@color/bg_f5f5f5">
        <ImageView
            android:id="@+id/circlefriend_imgview2"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="40px"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/circlefriend_text21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40px"
            android:textColor="@color/secondblack"
            android:textSize="@dimen/bodytextsize"
            android:layout_toRightOf="@id/circlefriend_imgview2"/>

        <TextView
            android:id="@+id/circlefriend_text22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/secondblack"
            android:textSize="@dimen/bodytextsize"
            android:layout_marginRight="40px"/>

    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:background="@color/white">
        <ImageView
            android:id="@+id/circlefriend_imgview3"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="40px"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/circlefriend_text31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40px"
            android:textColor="@color/secondblack"
            android:textSize="@dimen/bodytextsize"
            android:layout_toRightOf="@id/circlefriend_imgview3"/>

        <TextView
            android:id="@+id/circlefriend_text32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/secondblack"
            android:textSize="@dimen/bodytextsize"
            android:layout_marginRight="40px"/>

    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoLinearLayout>
